---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title = "Progressivo", lang = "cs" } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
  <script is:inline>
    // Automatic language detection
    // Only run on the root path
    if (window.location.pathname === '/' || window.location.pathname === '/index.html') {
      try {
        const userLang = navigator.language || navigator.userLanguage;
        // Get the primary language code (e.g., "en-US" -> "en")
        const langCode = userLang.split('-')[0].toLowerCase();
        const supportedLangs = ['en', 'de', 'ru', 'es'];

        // If the detected language is supported and not the default (cs), redirect
        if (supportedLangs.includes(langCode)) {
          // Check if we have already redirected or user explicitly chose this language?
          // The requirement says "při první návštěvě", but without cookies/storage it's hard to know if it's "first".
          // However, usually this script running on '/' is enough for the basic requirement.
          // Ideally we would check sessionStorage to avoid redirect loops if user explicitly clicks "CZ".
          // For now, implementing basic redirection as requested.

          // Check if not already redirected in this session to avoid loop if user wants to stay on CS
          if (!sessionStorage.getItem('lang_redirected')) {
             sessionStorage.setItem('lang_redirected', 'true');
             window.location.href = `/${langCode}`;
          }
        }
      } catch (e) {
        console.error('Language detection failed', e);
      }
    }
  </script>
</body>
</html>

<style is:global>
  :root {
    --color-text: #0f172a; /* Slate 900 */
    --color-text-light: #475569; /* Slate 600 */
    --color-accent: #d97706; /* Amber 600 */
    --color-accent-hover: #b45309; /* Amber 700 */
    --color-bg: #ffffff;
    --color-bg-alt: #f8fafc; /* Slate 50 */
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    background-color: var(--color-bg);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
  }

  main {
    flex: 1;
    width: 100%;
    /* Note: Removed max-width to allow full-width sections.
       Use .container for constrained content. */
  }

  h1, h2, h3, h4, h5, h6 {
    color: var(--color-text);
    line-height: 1.2;
    margin-top: 0;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-accent-hover);
  }

  /* Fix for broken images */
  img {
    background-color: #cbd5e1; /* Slate 300 - placeholder color */
    position: relative;
    /* Optional: Ensure it has some dimensions if src fails and no dims set,
       but that might break layout for intentional small icons.
       Usually sufficient to set bg color. */
  }

  /* Utility classes */
  .container {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    box-sizing: border-box;
  }

  /* Design System - Prose Configuration */
  .prose {
    max-width: 56rem; /* max-w-4xl */
    margin-left: auto;
    margin-right: auto;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    color: var(--color-text); /* Slate 900 */
    line-height: 1.75;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: var(--color-text);
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
    font-weight: 700;
  }

  .prose h1 {
    font-size: 2.25em;
    margin-top: 0;
  }

  .prose h2 {
    font-size: 1.5em;
  }

  .prose p {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .prose a {
    color: var(--color-accent); /* Amber 600 */
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: 500;
  }

  .prose a:hover {
    color: var(--color-accent-hover);
  }

  .prose ul, .prose ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  .prose blockquote {
    font-weight: 500;
    font-style: italic;
    color: var(--color-text);
    border-left-width: 0.25rem;
    border-left-color: var(--color-accent);
    margin-top: 1.6em;
    margin-bottom: 1.6em;
    padding-left: 1em;
  }

  .prose strong {
    font-weight: 600;
    color: var(--color-text);
  }
</style>
