---
import FloatingDock from '../components/FloatingDock.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import { ui, defaultLang } from '../i18n/ui';
import { getTranslatedPath, getPathFromUrl } from '../i18n/utils';

interface Props {
	title: string;
	lang?: string;
    description?: string;
    image?: string;
}

const { title, lang = defaultLang, description: propDescription, image = '/images/mapa-svetabusines.webp' } = Astro.props;

const t = ui[lang] || ui[defaultLang];
const description = propDescription || t.meta.default_description;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Hreflang Logic
const supportedLangs = Object.keys(ui);
const currentPath = Astro.url.pathname;

// Determine the "base" path without language prefix
const basePath = getPathFromUrl(currentPath);

// Generate hreflangs
const hreflangs = supportedLangs.map(l => {
    // getTranslatedPath handles the /cs/sluzby/ logic internally
    let href = new URL(getTranslatedPath(basePath, l), Astro.site).toString();

    // Clean up double slashes if any (though URL constructor handles it mostly)
    href = href.replace(/([^:]\/)\/+/g, "$1");

    return { lang: l, href };
});

const xDefault = hreflangs.find(h => h.lang === 'cs')?.href;

// JSON-LD
const schemaOrg = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Progressivo",
  "url": "https://progressivo.eu",
  "logo": "https://progressivo.eu/images/Transparent%20Logo.svg",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+507-6850-9698",
    "contactType": "customer service"
  }
};

const schemaWebSite = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Progressivo",
  "url": "https://progressivo.eu"
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
        <script is:inline>
          // Okamžitě nastav téma před vykreslením
          (function() {
            const savedTheme = localStorage.getItem('theme');
            const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            const theme = savedTheme || systemTheme;
            document.documentElement.setAttribute('data-theme', theme);
            document.documentElement.classList.toggle('dark', theme === 'dark');
          })();
        </script>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="canonical" href={canonicalURL} />

        {hreflangs.map(h => (
            <link rel="alternate" hreflang={h.lang} href={h.href} />
        ))}
        {xDefault && <link rel="alternate" hreflang="x-default" href={xDefault} />}

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.site)} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:site_name" content="Progressivo" />

        <!-- JSON-LD -->
        <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
        <script type="application/ld+json" set:html={JSON.stringify(schemaWebSite)} />

        <!-- Microsoft Clarity -->
        <script type="text/javascript">
          (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
          })(window, document, "clarity", "script", "uypg8a6dsa");
        </script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&family=Plus+Jakarta+Sans:wght@500;600;700&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body>
        <Header lang={lang} />
        <main>
		    <slot />
        </main>
        <FloatingDock lang={lang} />
        <Footer lang={lang} />
	</body>
</html>
<style is:global>
    *, *::before, *::after {
        box-sizing: border-box;
    }
	:root {
		--font-body: 'Manrope', sans-serif;
		--font-heading: 'Plus Jakarta Sans', sans-serif;

        /* Light Mode - Premium Paper / Warm Stone */
		--color-bg: #f5f5f4; /* Stone 100 */
		--color-bg-alt: #e7e5e4; /* Stone 200 */
        --color-bg-card: #fcfbf9; /* Warm Paper - Slightly creamy/warm */

        --color-text: #0f172a; /* Slate 900 - Sharp Contrast */
        --color-text-light: #475569; /* Slate 600 */
        --color-accent: #d97706; /* Amber-600 */
        --color-accent-hover: #b45309;
        --color-border: #d6d3d1; /* Stone 300 */

        /* Premium Paper Card Styles - Physical feel */
        --card-border: 1px solid rgba(120, 113, 108, 0.15); /* Warm Stone border (micro-contrast) */
        --card-shadow: 0 4px 6px -1px rgba(120, 113, 108, 0.08), 0 2px 4px -1px rgba(120, 113, 108, 0.04); /* Toned warm shadow (not black) */

        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-card: var(--card-shadow); /* Mapping for backward compatibility */
	}
    :root.dark {
        /* Dark Mode - Cyberpunk / Future */
        --color-bg: #0f172a; /* Slate 900 */
        --color-bg-alt: #1e293b; /* Slate 800 */
        --color-bg-card: rgba(2, 6, 23, 0.8); /* Slate 950 alpha */

        --color-text: #f8fafc;
        --color-text-light: #cbd5e1;
        --color-border: #334155;

        --card-border: 1px solid rgba(255, 255, 255, 0.1);
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.18);
        --shadow-card: var(--card-shadow);
    }
	html {
		font-family: var(--font-body);
        scroll-behavior: smooth;
	}
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        background: var(--color-bg);
        color: var(--color-text);
        min-height: 100vh;
        transition: none;
    }

    /* Filmový šum přes celý web */
    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9999;
      opacity: 0.05;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }
	h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        color: var(--color-text);
    }
    h1, .hero-title {
        letter-spacing: -0.04em;
    }
    h2 {
        letter-spacing: -0.02em;
    }
    h3 {
        letter-spacing: -0.01em;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    img:not([src*=".svg"]) {
        background-color: var(--color-bg-alt);
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: var(--shadow-md);
    }

    /* Markdown content styles */
    .prose {
        max-width: 65ch;
        margin: 0 auto;
        color: var(--color-text);
        line-height: 1.75;
    }
    .prose h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    .prose h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }
    .prose p {
        margin-bottom: 1.25rem;
    }
    .prose ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
    }
    .prose li {
        margin-bottom: 0.5rem;
    }
</style>
<script>
  // Global scroll listener for UI state
  document.addEventListener('astro:page-load', () => {
      let lastScrollY = window.scrollY;
      const threshold = 50;

      const updateScrollState = () => {
          const scrollY = window.scrollY;
          const body = document.body;

          if (scrollY > threshold) {
              body.classList.add('scrolled-down');
          } else {
              body.classList.remove('scrolled-down');
          }

          lastScrollY = scrollY;
      };

      window.addEventListener('scroll', updateScrollState, { passive: true });
      updateScrollState(); // Initial check
  });
</script>
