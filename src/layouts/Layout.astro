---
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
	lang?: string;
    description?: string;
    image?: string;
}

const { title, lang = 'cs', description: propDescription, image = '/images/mapa-svetabusines.webp' } = Astro.props;

const descriptions = {
  cs: "Progressivo - Váš partner pro mezinárodní obchod, expanzi do Panamy a strategické poradenství.",
  en: "Progressivo - Your partner for international trade, expansion to Panama, and strategic consulting.",
  de: "Progressivo - Ihr Partner für internationalen Handel, Expansion nach Panama und strategische Beratung.",
  es: "Progressivo - Su socio para el comercio internacional, la expansión a Panamá y la consultoría estratégica.",
  ru: "Progressivo - Ваш партнер по международной торговле, расширению бизнеса в Панаме и стратегическому консалтингу."
};

const description = propDescription || descriptions[lang] || descriptions.cs;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Hreflang Logic
const supportedLangs = ['cs', 'en', 'de', 'es', 'ru'];
const currentPath = Astro.url.pathname;
const segments = currentPath.split('/').filter(Boolean);

// Determine the "base" path without language prefix
let basePath = currentPath;
if (segments.length > 0 && supportedLangs.includes(segments[0])) {
    basePath = '/' + segments.slice(1).join('/');
}
// Special case: if basePath is just '/', keep it '/'
if (basePath === '') basePath = '/';

// Generate hreflangs
const hreflangs = supportedLangs.map(l => {
    let href;
    if (l === 'cs') {
        // CS is default, but for Services we moved it to /cs/.
        // For other pages (like root, o-nas, blog), CS is at root.
        // We need to know if the current page requires explicit CS prefix.
        // Currently, 'sluzby' requires explicit CS prefix based on our change.
        if (basePath.startsWith('/sluzby/')) {
            href = `${Astro.site}cs${basePath}`;
        } else {
            // Standard root pages
            href = `${Astro.site}${basePath === '/' ? '' : basePath.substring(1)}`;
        }
    } else {
        // Other languages always have prefix
        href = `${Astro.site}${l}${basePath}`;
    }
    // Clean up double slashes
    href = href.replace(/([^:]\/)\/+/g, "$1");
    // Remove trailing slash if needed, or keep standard. Astro usually adds trailing slash.
    return { lang: l, href };
});

const xDefault = hreflangs.find(h => h.lang === 'cs')?.href;

// JSON-LD
const schemaOrg = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Progressivo",
  "url": "https://progressivo.eu",
  "logo": "https://progressivo.eu/images/Transparent%20Logo.svg",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+507-6850-9698",
    "contactType": "customer service"
  }
};

const schemaWebSite = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Progressivo",
  "url": "https://progressivo.eu"
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="canonical" href={canonicalURL} />

        {hreflangs.map(h => (
            <link rel="alternate" hreflang={h.lang} href={h.href} />
        ))}
        {xDefault && <link rel="alternate" hreflang="x-default" href={xDefault} />}

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.site)} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:site_name" content="Progressivo" />

        <!-- JSON-LD -->
        <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
        <script type="application/ld+json" set:html={JSON.stringify(schemaWebSite)} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&family=Plus+Jakarta+Sans:wght@500;600;700&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body>
        <Header lang={lang} />
		<slot />
        <Footer lang={lang} />
        <WhatsAppButton />
	</body>
</html>
<style is:global>
    *, *::before, *::after {
        box-sizing: border-box;
    }
	:root {
		--font-body: 'Manrope', sans-serif;
		--font-heading: 'Plus Jakarta Sans', sans-serif;
		--color-bg: #ffffff;
		--color-bg-alt: #f8fafc;
        --color-text: #0f172a;
        --color-text-light: #475569;
        --color-accent: #d97706; /* Amber-600 */
        --color-accent-hover: #b45309;
        --color-border: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}
    :root.dark {
        --color-bg: #0f172a;
        --color-bg-alt: #1e293b;
        --color-text: #f8fafc;
        --color-text-light: #cbd5e1;
        --color-border: #334155;
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.18);
    }
	html {
		font-family: var(--font-body);
		background: var(--color-bg);
        color: var(--color-text);
        scroll-behavior: smooth;
	}
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Filmový šum přes celý web */
    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9999;
      opacity: 0.05;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }
	h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        color: var(--color-text);
    }
    h1, .hero-title {
        letter-spacing: -0.04em;
    }
    h2 {
        letter-spacing: -0.02em;
    }
    h3 {
        letter-spacing: -0.01em;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    img:not([src*=".svg"]) {
        background-color: var(--color-bg-alt);
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: var(--shadow-md);
    }

    /* Markdown content styles */
    .prose {
        max-width: 65ch;
        margin: 0 auto;
        color: var(--color-text);
        line-height: 1.75;
    }
    .prose h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    .prose h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }
    .prose p {
        margin-bottom: 1.25rem;
    }
    .prose ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
    }
    .prose li {
        margin-bottom: 0.5rem;
    }
</style>
