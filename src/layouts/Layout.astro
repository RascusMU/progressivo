---
import FloatingDock from '../components/FloatingDock.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import { ui, defaultLang } from '../i18n/ui';
import { getTranslatedPath, getPathFromUrl } from '../i18n/utils';

interface Props {
	title: string;
	lang?: string;
    description?: string;
    image?: string;
    schema?: object | object[];
    articleDate?: string;
    type?: 'website' | 'article';
}

const {
    title,
    lang = defaultLang,
    description: propDescription,
    image = '/images/mapa-svetabusines.webp',
    schema,
    articleDate,
    type = 'website'
} = Astro.props;

const t = ui[lang] || ui[defaultLang];
const description = propDescription || t.meta.default_description;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Locale Mapping
const localeMap: Record<string, string> = {
    'cs': 'cs_CZ',
    'en': 'en_US',
    'de': 'de_DE',
    'es': 'es_PA', // Panama Spanish
    'ru': 'ru_RU'
};
const ogLocale = localeMap[lang] || 'en_US';

// Image URL Resolution (ensure absolute)
// Use new URL() to handle both relative paths and already absolute URLs if any
const ogImageURL = new URL(image, Astro.site).toString();

// Hreflang Logic
const supportedLangs = Object.keys(ui);
const currentPath = Astro.url.pathname;

// Determine the "base" path without language prefix
const basePath = getPathFromUrl(currentPath);

// Generate hreflangs
const hreflangs = supportedLangs.map(l => {
    // getTranslatedPath handles the /cs/sluzby/ logic internally
    let href = new URL(getTranslatedPath(basePath, l), Astro.site).toString();

    // Clean up double slashes if any (though URL constructor handles it mostly)
    href = href.replace(/([^:]\/)\/+/g, "$1");

    return { lang: l, href };
});

const xDefault = hreflangs.find(h => h.lang === 'cs')?.href;

// JSON-LD
const schemaOrg = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Progressivo",
  "url": "https://progressivo.eu",
  "logo": "https://progressivo.eu/images/Transparent%20Logo.svg",
  "email": "info@progressivo.eu",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Oceanía Business Plaza 1000",
    "addressLocality": "Panama City",
    "addressCountry": "PA"
  },
  "contactPoint": [
    {
        "@type": "ContactPoint",
        "telephone": "+507-6850-9698",
        "contactType": "customer service",
        "email": "info@progressivo.eu",
        "availableLanguage": ["Czech", "English", "German", "Spanish", "Russian"]
    }
  ],
  "sameAs": []
};

const schemaWebSite = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Progressivo",
  "url": "https://progressivo.eu",
  "inLanguage": lang
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
        <script is:inline>
          // Okamžitě nastav téma před vykreslením
          (function() {
            const savedTheme = localStorage.getItem('theme');
            const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            const theme = savedTheme || systemTheme;
            document.documentElement.setAttribute('data-theme', theme);
            document.documentElement.classList.toggle('dark', theme === 'dark');
          })();
        </script>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="canonical" href={canonicalURL} />

        {hreflangs.map(h => (
            <link rel="alternate" hreflang={h.lang} href={h.href} />
        ))}
        {xDefault && <link rel="alternate" hreflang="x-default" href={xDefault} />}

        <!-- Open Graph -->
        <meta property="og:type" content={type} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImageURL} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:site_name" content="Progressivo" />
        <meta property="og:locale" content={ogLocale} />
        {articleDate && <meta property="article:published_time" content={articleDate} />}

        <!-- Twitter Cards -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImageURL} />

        <!-- JSON-LD -->
        <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
        <script type="application/ld+json" set:html={JSON.stringify(schemaWebSite)} />
        {schema && (Array.isArray(schema) ? schema : [schema]).map(s => (
            <script type="application/ld+json" set:html={JSON.stringify(s)} />
        ))}

        <!-- Microsoft Clarity -->
        <script type="text/javascript">
          (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
          })(window, document, "clarity", "script", "uypg8a6dsa");
        </script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&family=Plus+Jakarta+Sans:wght@500;600;700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<ClientRouter />
	</head>
	<body>
        <Header lang={lang} />
        <main>
		    <slot />
        </main>
        <FloatingDock lang={lang} />
        <Footer lang={lang} />

        <!-- AI Advisor Button -->
        <button onclick="openProgressivoAdvisor()"
                class="jc-advisor-btn fixed bottom-6 right-6 z-50 w-16 h-16 rounded-full shadow-2xl hover:scale-110 transition-all duration-300 flex items-center justify-center group bg-stone-800 dark:bg-stone-900 border-2 border-amber-600"
                aria-label="Business Advisor">
            <span class="text-2xl text-stone-400 group-hover:text-amber-600 transition duration-300"
                    style="font-family: 'Caveat', cursive; font-weight: 600; letter-spacing: -2px;">JC</span>
        </button>

        <!-- AI Advisor Modal -->
        <div id="progressivoAdvisorModal" class="modal hidden fixed inset-0 z-[80] flex items-center justify-center p-4">
            <div class="absolute inset-0 bg-stone-900/90 backdrop-blur-sm" onclick="closeProgressivoAdvisor()"></div>
            <div class="relative bg-stone-50 dark:bg-stone-900 w-full max-w-md rounded-lg shadow-2xl border-2 border-amber-600 overflow-hidden">
                <div class="bg-gradient-to-r from-amber-600 to-amber-700 p-6 text-white relative">
                    <h3 class="text-xl font-bold">Business Advisor</h3>
                    <p class="text-sm opacity-90 mt-1">Popište svou situaci a doporučím vám řešení.</p>
                    <button onclick="closeProgressivoAdvisor()"
                            class="absolute top-4 right-4 text-white hover:text-stone-900 transition w-8 h-8 rounded-full hover:bg-white/20 flex items-center justify-center">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="p-6">
                    <textarea id="progressivoAdvisorInput" rows="4"
                                class="w-full border-2 border-stone-300 dark:border-stone-700 bg-transparent text-stone-900 dark:text-stone-100 rounded-lg p-3 text-sm focus:border-amber-600 transition resize-none"
                                placeholder="Např: Chci založit firmu v Panamě..."></textarea>
                    <button onclick="askProgressivoAdvisor()"
                            class="w-full bg-stone-900 dark:bg-amber-600 text-white py-3 rounded-lg font-bold uppercase text-xs hover:bg-amber-600 transition mt-4 flex items-center justify-center gap-2">
                        <i class="fas fa-magic"></i> Poradit mi
                    </button>
                    <div id="progressivoAdvisorResult" class="hidden mt-6 bg-amber-50 dark:bg-stone-800 p-4 rounded-lg border border-amber-600 text-sm"></div>
                </div>
            </div>
        </div>
	</body>
</html>
<style is:global>
    *, *::before, *::after {
        box-sizing: border-box;
    }
	:root {
		--font-body: 'Manrope', system-ui, -apple-system, 'Segoe UI', sans-serif;
		--font-heading: 'Plus Jakarta Sans', system-ui, -apple-system, 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;

        /* Light Mode - Premium Paper / Warm Stone */
		--color-bg: #f5f5f4; /* Stone 100 */
		--color-bg-alt: #e7e5e4; /* Stone 200 */
        --color-bg-card: #fcfbf9; /* Warm Paper - Slightly creamy/warm */

        --color-text: #0f172a; /* Slate 900 - Sharp Contrast */
        --color-text-light: #475569; /* Slate 600 */
        --color-accent: #d97706; /* Amber-600 */
        --color-accent-hover: #b45309;
        --color-border: #d6d3d1; /* Stone 300 */

        /* Premium Paper Card Styles - Physical feel */
        --card-border: 1px solid rgba(120, 113, 108, 0.15); /* Warm Stone border (micro-contrast) */
        --card-shadow: 0 4px 6px -1px rgba(120, 113, 108, 0.08), 0 2px 4px -1px rgba(120, 113, 108, 0.04); /* Toned warm shadow (not black) */

        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-card: var(--card-shadow); /* Mapping for backward compatibility */
	}
    :root.dark {
        /* Dark Mode - Cyberpunk / Future */
        --color-bg: #0f172a; /* Slate 900 */
        --color-bg-alt: #1e293b; /* Slate 800 */
        --color-bg-card: rgba(2, 6, 23, 0.8); /* Slate 950 alpha */

        --color-text: #f8fafc;
        --color-text-light: #cbd5e1;
        --color-border: #334155;

        --card-border: 1px solid rgba(255, 255, 255, 0.1);
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.18);
        --shadow-card: var(--card-shadow);
    }
	html {
		font-family: var(--font-body);
        scroll-behavior: smooth;
	}
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        background: var(--color-bg);
        color: var(--color-text);
        min-height: 100vh;
        transition: none;
    }

    /* Filmový šum přes celý web */
    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9999;
      opacity: 0.05;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }
	h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        color: var(--color-text);
    }
    h1, .hero-title {
        letter-spacing: -0.04em;
    }
    h2 {
        letter-spacing: -0.02em;
    }
    h3 {
        letter-spacing: -0.01em;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    img:not([src*=".svg"]) {
        background-color: var(--color-bg-alt);
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: var(--shadow-md);
    }

    /* Markdown content styles */
    .prose {
        max-width: 65ch;
        margin: 0 auto;
        color: var(--color-text);
        line-height: 1.75;
    }
    .prose h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    .prose h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }
    .prose p {
        margin-bottom: 1.25rem;
    }
    .prose ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
    }
    .prose li {
        margin-bottom: 0.5rem;
    }

   @keyframes amber-pulse {
       0%, 100% { box-shadow: 0 0 15px rgba(217, 119, 6, 0.3), 0 0 30px rgba(217, 119, 6, 0.1); }
       50% { box-shadow: 0 0 25px rgba(217, 119, 6, 0.5), 0 0 50px rgba(217, 119, 6, 0.2); }
   }
   .jc-advisor-btn { animation: amber-pulse 3s ease-in-out infinite; }
   .jc-advisor-btn:hover { animation: none; transform: scale(1.1) rotate(5deg); }
   .typing-indicator { display: flex; justify-content: center; gap: 4px; }
   .typing-indicator span { width: 8px; height: 8px; background: #d97706; border-radius: 50%; animation: typing-bounce 1.4s infinite; }
   @keyframes typing-bounce { 0%, 80%, 100% { transform: scale(0); } 40% { transform: scale(1); } }
</style>
<script>
  // Global scroll listener for UI state & Animation Logic
  document.addEventListener('astro:page-load', () => {
      // 1. Scroll State
      let lastScrollY = window.scrollY;
      const threshold = 50;

      const updateScrollState = () => {
          const scrollY = window.scrollY;
          const body = document.body;

          if (scrollY > threshold) {
              body.classList.add('scrolled-down');
          } else {
              body.classList.remove('scrolled-down');
          }

          lastScrollY = scrollY;
      };

      window.addEventListener('scroll', updateScrollState, { passive: true });
      updateScrollState(); // Initial check

      // 2. Global Animation Gate (2s Delay)
      // "Gentle Lift" requires the user to settle before animations trigger
      setTimeout(() => {
          document.body.classList.add('animations-enabled');
      }, 2000);

      // 3. Intersection Observer for .animate-on-scroll
      if ('IntersectionObserver' in window) {
          const observerOptions = {
              root: null,
              rootMargin: '0px',
              threshold: 0.1
          };

          const observer = new IntersectionObserver((entries) => {
              entries.forEach(entry => {
                  if (entry.isIntersecting) {
                      entry.target.classList.add('in-view');
                      observer.unobserve(entry.target); // Trigger once
                  }
              });
          }, observerOptions);

          document.querySelectorAll('.animate-on-scroll').forEach(el => {
              observer.observe(el);
          });
      } else {
          // Fallback: Show immediately if IO is not supported
          document.querySelectorAll('.animate-on-scroll').forEach(el => {
              el.classList.add('in-view');
          });
      }
  });
</script>
<script is:inline>
   let progressivoAdvisorLastFocus;
   function openProgressivoAdvisor() {
       progressivoAdvisorLastFocus = document.activeElement;
       document.getElementById('progressivoAdvisorModal').classList.remove('hidden');
       document.body.classList.add('overflow-hidden');
   }
   function closeProgressivoAdvisor() {
       document.getElementById('progressivoAdvisorModal').classList.add('hidden');
       document.body.classList.remove('overflow-hidden');
       if (progressivoAdvisorLastFocus) progressivoAdvisorLastFocus.focus();
   }
   async function askProgressivoAdvisor() {
       const input = document.getElementById('progressivoAdvisorInput').value.trim();
       if (!input) return;
       const result = document.getElementById('progressivoAdvisorResult');
       result.classList.remove('hidden');
       result.innerHTML = '<div class="typing-indicator"><span></span><span></span><span></span></div>';
       const prompt = `Jsi business konzultant Jaroslava Cingela (Progressivo.eu). Služby: 1) Zakládání firem v Panamě 2) Daňové poradenství 3) IT podpora 4) Právní služby 5) Expat asistence. Dotaz: "${input}". Úkol: Analyzuj (1 věta), doporuč službu (2 věty), navrhni sekci webu (#sluzby), nabídni kontakt (WhatsApp +507 68509698 nebo info@progressivo.eu). Max 5 vět. Čeština.`;
       const reply = await callGemini(prompt);
       let fmt = reply.replace(/\n/g, '<br>');
       fmt = fmt.replace(/#([a-z-]+)/gi, (m,s) => `<a href="#${s}" class="text-amber-600 underline" onclick="closeProgressivoAdvisor()">#${s}</a>`);
       fmt = fmt.replace(/\+507 68509698/g, '<a href="https://wa.me/50768509698" target="_blank" class="text-amber-600 underline">+507 68509698</a>');
       fmt = fmt.replace(/info@progressivo\.eu/g, '<a href="mailto:info@progressivo.eu" class="text-amber-600 underline">info@progressivo.eu</a>');
       result.innerHTML = `<div class="text-stone-700 dark:text-stone-300">${fmt}</div>`;
   }
   async function callGemini(prompt) {
       const key = atob("QUl6YVN5QU9qNXJ3MXNNWDgwM3AxTG5zaWc3YjBCMDIzTVFnZWhR");
       const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-flash-latest:generateContent?key=${key}`, {
           method: 'POST',
           headers: { 'Content-Type': 'application/json' },
           body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
       });
       const data = await res.json();
       return data.candidates?.[0]?.content?.parts?.[0]?.text || "Chyba AI.";
   }
   document.addEventListener('keydown', (e) => {
       if (e.key === 'Escape' && !document.getElementById('progressivoAdvisorModal')?.classList.contains('hidden')) closeProgressivoAdvisor();
   });
</script>
