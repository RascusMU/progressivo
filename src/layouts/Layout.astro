---
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Modal from '../components/Modal.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
	lang?: string;
}

const { title, lang = 'cs' } = Astro.props;

const descriptions = {
  cs: "Progressivo - Váš partner pro mezinárodní obchod, expanzi do Panamy a strategické poradenství.",
  en: "Progressivo - Your partner for international trade, expansion to Panama, and strategic consulting.",
  de: "Progressivo - Ihr Partner für internationalen Handel, Expansion nach Panama und strategische Beratung.",
  es: "Progressivo - Su socio para el comercio internacional, la expansión a Panamá y la consultoría estratégica.",
  ru: "Progressivo - Ваш партнер по международной торговле, расширению бизнеса в Панаме и стратегическому консалтингу."
};

const description = descriptions[lang] || descriptions.cs;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&family=Plus+Jakarta+Sans:wght@500;600;700&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body>
		<slot />
        <WhatsAppButton />
        <Modal lang={lang} />
        <script define:vars={{ currentLang: lang }}>
            // Automatic language redirection
            // Check if we are on the root path
            if (window.location.pathname === '/' && !window.location.hash) {
                const savedLang = localStorage.getItem('preferred-lang');
                const userLang = navigator.language || navigator.userLanguage;

                // If the user has a saved preference, rely on it
                if (savedLang) {
                    if (savedLang !== 'cs' && savedLang !== currentLang) {
                         window.location.href = `/${savedLang}/`;
                    }
                } else if (userLang) {
                    // Otherwise fall back to browser language
                    if (userLang.startsWith('en') && currentLang !== 'en') {
                        window.location.href = '/en/';
                    } else if (userLang.startsWith('de') && currentLang !== 'de') {
                        window.location.href = '/de/';
                    } else if (userLang.startsWith('es') && currentLang !== 'es') {
                        window.location.href = '/es/';
                    } else if (userLang.startsWith('ru') && currentLang !== 'ru') {
                        window.location.href = '/ru/';
                    }
                }
            }
        </script>
	</body>
</html>
<style is:global>
	:root {
		--font-body: 'Manrope', sans-serif;
		--font-heading: 'Plus Jakarta Sans', sans-serif;
		--color-bg: #ffffff;
		--color-bg-alt: #f8fafc;
        --color-text: #0f172a;
        --color-text-light: #475569;
        --color-accent: #d97706; /* Amber-600 */
        --color-accent-hover: #b45309;
        --color-border: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}
    :root.dark {
        --color-bg: #0f172a;
        --color-bg-alt: #1e293b;
        --color-text: #f8fafc;
        --color-text-light: #cbd5e1;
        --color-border: #334155;
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.18);
    }
	html {
		font-family: var(--font-body);
		background: var(--color-bg);
        color: var(--color-text);
        scroll-behavior: smooth;
	}
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
	h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        color: var(--color-text);
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    img:not([src*=".svg"]) {
        background-color: var(--color-bg-alt);
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: var(--shadow-md);
    }

    /* Markdown content styles */
    .prose {
        max-width: 65ch;
        margin: 0 auto;
        color: var(--color-text);
        line-height: 1.75;
    }
    .prose h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    .prose h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }
    .prose p {
        margin-bottom: 1.25rem;
    }
    .prose ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
    }
    .prose li {
        margin-bottom: 0.5rem;
    }

    /* Animation classes */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 1s cubic-bezier(0.2, 0.8, 0.2, 1), transform 1s cubic-bezier(0.2, 0.8, 0.2, 1);
    }
    .animate-on-scroll.is-visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>
