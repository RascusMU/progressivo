---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title = "Progressivo" } = Astro.props;
---
<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>

<style is:global>
  :root {
    --color-text: #0f172a; /* Slate 900 */
    --color-text-light: #475569; /* Slate 600 */
    --color-accent: #d97706; /* Amber 600 */
    --color-accent-hover: #b45309; /* Amber 700 */
    --color-bg: #ffffff;
    --color-bg-alt: #f8fafc; /* Slate 50 */
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    background-color: var(--color-bg);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
  }

  main {
    flex: 1;
    width: 100%;
    /* Note: Removed max-width to allow full-width sections.
       Use .container for constrained content. */
  }

  h1, h2, h3, h4, h5, h6 {
    color: var(--color-text);
    line-height: 1.2;
    margin-top: 0;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-accent-hover);
  }

  /* Fix for broken images */
  img {
    background-color: #cbd5e1; /* Slate 300 - placeholder color */
    position: relative;
    /* Optional: Ensure it has some dimensions if src fails and no dims set,
       but that might break layout for intentional small icons.
       Usually sufficient to set bg color. */
  }

  /* Utility classes */
  .container {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    box-sizing: border-box;
  }
</style>
