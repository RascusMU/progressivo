---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

const { title = "Progressivo", lang = "cs" } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Plus+Jakarta+Sans:wght@200..800&display=swap" rel="stylesheet">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
  <WhatsAppButton />

  <script is:inline>
    // Automatic language detection
    if (window.location.pathname === '/' || window.location.pathname === '/index.html') {
      try {
        const userLang = navigator.language || navigator.userLanguage;
        const langCode = userLang.split('-')[0].toLowerCase();
        const supportedLangs = ['en', 'de', 'ru', 'es'];

        if (supportedLangs.includes(langCode)) {
          if (!sessionStorage.getItem('lang_redirected')) {
             sessionStorage.setItem('lang_redirected', 'true');
             window.location.href = `/${langCode}`;
          }
        }
      } catch (e) {
        console.error('Language detection failed', e);
      }
    }

    // Animation Observer
    document.addEventListener('DOMContentLoaded', () => {
      const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
      };

      const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      const elements = document.querySelectorAll('.animate-on-scroll');
      elements.forEach(el => observer.observe(el));

      // Also observe sections by default if they don't have the class but we want to animate them
      // For now, I'll manually add the class to sections I want to animate or just target all sections
      const sections = document.querySelectorAll('section');
      sections.forEach(el => {
          el.classList.add('animate-on-scroll');
          observer.observe(el);
      });
    });

    // Dark Mode Init
    (function() {
      const savedTheme = localStorage.getItem('theme');
      const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      if (savedTheme === 'dark' || (!savedTheme && systemTheme === 'dark')) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    })();
  </script>
</body>
</html>

<style is:global>
  :root {
    /* Light Mode Variables */
    --color-text: #0f172a; /* Slate 900 */
    --color-text-light: #475569; /* Slate 600 */
    --color-accent: #d97706; /* Amber 600 */
    --color-accent-hover: #b45309; /* Amber 700 */
    --color-bg: #ffffff;
    --color-bg-alt: #f8fafc; /* Slate 50 */
    --color-bg-header: rgba(255, 255, 255, 0.95);
    --color-border: rgba(0, 0, 0, 0.05);
    --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  /* Dark Mode Variables */
  html.dark {
    --color-text: #f1f5f9; /* Slate 100 */
    --color-text-light: #94a3b8; /* Slate 400 */
    --color-bg: #0f172a; /* Slate 900 */
    --color-bg-alt: #1e293b; /* Slate 800 */
    --color-bg-header: rgba(15, 23, 42, 0.95);
    --color-border: rgba(255, 255, 255, 0.1);
    --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.5), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: 'Manrope', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    background-color: var(--color-bg);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  main {
    flex: 1;
    width: 100%;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Plus Jakarta Sans', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    line-height: 1.2;
    margin-top: 0;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-accent-hover);
  }

  img {
    background-color: #cbd5e1;
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    box-sizing: border-box;
  }

  /* Animation Classes */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Prose Configuration */
  .prose {
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
    font-family: 'Manrope', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    line-height: 1.75;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    font-family: 'Plus Jakarta Sans', system-ui, -apple-system, sans-serif;
    color: var(--color-text);
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
    font-weight: 700;
  }

  .prose h1 { font-size: 2.25em; margin-top: 0; }
  .prose h2 { font-size: 1.5em; }
  .prose p { margin-top: 1.25em; margin-bottom: 1.25em; }
  .prose a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: 500;
  }
  .prose a:hover { color: var(--color-accent-hover); }
  .prose ul, .prose ol { margin-top: 1.25em; margin-bottom: 1.25em; padding-left: 1.625em; }
  .prose li { margin-top: 0.5em; margin-bottom: 0.5em; }
  .prose blockquote {
    font-weight: 500;
    font-style: italic;
    color: var(--color-text);
    border-left-width: 0.25rem;
    border-left-color: var(--color-accent);
    margin-top: 1.6em;
    margin-bottom: 1.6em;
    padding-left: 1em;
  }
  .prose strong { font-weight: 600; color: var(--color-text); }
</style>
