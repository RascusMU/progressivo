---
const { lang = 'cs' } = Astro.props;
const year = new Date().getFullYear();

const translations = {
  cs: {
    founderRole: "Zakladatel & CEO",
    quote: "\"Budoucnost patří těm, kteří se nebojí spojit zdánlivě nespojitelné.\"",
    writeToMe: "Napište mi \u2192",
    companyDesc: "Jsme Progressivo. Propojujeme moderní technologie, vzdělávání a vědu pro lepší budoucnost. Váš partner pro růst a inovace.",
    quickLinks: "Rychlé odkazy",
    linkServices: "Služby",
    linkBlog: "Blog",
    linkAbout: "O nás",
    linkContact: "Kontakt",
    legalInfo: "Právní informace",
    linkGdpr: "GDPR a ochrana dat",
    linkTerms: "Obchodní podmínky",
    linkContract: "Smluvní podmínky",
    allRights: "Všechna práva vyhrazena."
  },
  en: {
    founderRole: "Founder & CEO",
    quote: "\"The future belongs to those who are not afraid to connect the seemingly unconnected.\"",
    writeToMe: "Write to me \u2192",
    companyDesc: "We are Progressivo. Connecting modern technology, education, and science for a better future. Your partner for growth and innovation.",
    quickLinks: "Quick Links",
    linkServices: "Services",
    linkBlog: "Blog",
    linkAbout: "About Us",
    linkContact: "Contact",
    legalInfo: "Legal Info",
    linkGdpr: "GDPR & Data Protection",
    linkTerms: "Terms & Conditions",
    linkContract: "Contractual Terms",
    allRights: "All rights reserved."
  },
  de: {
    founderRole: "Gründer & CEO",
    quote: "\"Die Zukunft gehört denen, die sich nicht scheuen, das scheinbar Unverbindbare zu verbinden.\"",
    writeToMe: "Schreiben Sie mir \u2192",
    companyDesc: "Wir sind Progressivo. Wir verbinden moderne Technologie, Bildung und Wissenschaft für eine bessere Zukunft. Ihr Partner für Wachstum und Innovation.",
    quickLinks: "Schnelllinks",
    linkServices: "Dienstleistungen",
    linkBlog: "Blog",
    linkAbout: "Über uns",
    linkContact: "Kontakt",
    legalInfo: "Rechtliche Hinweise",
    linkGdpr: "DSGVO & Datenschutz",
    linkTerms: "AGB",
    linkContract: "Vertragsbedingungen",
    allRights: "Alle Rechte vorbehalten."
  },
  es: {
    founderRole: "Fundador & CEO",
    quote: "\"El futuro pertenece a aquellos que no temen conectar lo aparentemente inconectable.\"",
    writeToMe: "Escríbeme \u2192",
    companyDesc: "Somos Progressivo. Conectamos tecnología moderna, educación y ciencia para un futuro mejor. Su socio para el crecimiento y la innovación.",
    quickLinks: "Enlaces rápidos",
    linkServices: "Servicios",
    linkBlog: "Blog",
    linkAbout: "Sobre nosotros",
    linkContact: "Contacto",
    legalInfo: "Información legal",
    linkGdpr: "GDPR y protección de datos",
    linkTerms: "Términos y condiciones",
    linkContract: "Condiciones contractuales",
    allRights: "Todos los derechos reservados."
  },
  ru: {
    founderRole: "Основатель и CEO",
    quote: "\"Будущее принадлежит тем, кто не боится соединять, казалось бы, несоединимое.\"",
    writeToMe: "Напишите мне \u2192",
    companyDesc: "Мы — Progressivo. Соединяем современные технологии, образование и науку ради лучшего будущего. Ваш партнер для роста и инноваций.",
    quickLinks: "Быстрые ссылки",
    linkServices: "Услуги",
    linkBlog: "Блог",
    linkAbout: "О нас",
    linkContact: "Контакты",
    legalInfo: "Юридическая информация",
    linkGdpr: "GDPR и защита данных",
    linkTerms: "Условия использования",
    linkContract: "Договорные условия",
    allRights: "Все права защищены."
  }
};

const t = translations[lang] || translations.cs;

// Helper for links
const getLink = (path) => {
    if (path === '/') return lang === 'cs' ? '/' : `/${lang}/`;
    if (path.startsWith('#')) return lang === 'cs' ? `/${path}` : `/${lang}/${path}`;
    return lang === 'cs' ? path : `/${lang}${path}`;
};
---
<footer>
  <!-- Founder Medallion Section -->
  <div class="founder-medallion">
    <div class="container medallion-content">
      <div class="medallion-image-wrapper">
         <img src="/images/tatka_knihovna.webp" alt="Jaroslav Cingel" class="medallion-image" />
      </div>
      <div class="medallion-text">
        <h4>Jaroslav Cingel</h4>
        <p class="role">{t.founderRole}</p>
        <p class="quote">{t.quote}</p>
        <a href="mailto:info@cingel.cz" class="contact-link">{t.writeToMe}</a>
      </div>
    </div>
  </div>

  <div class="footer-container">
    <!-- Column 1: Logo & Company Description -->
    <div class="footer-col company-info">
      <a href={getLink('/')} class="footer-logo">
        <img src="/images/Transparent-Logo-2-260x174.png" alt="Progressivo Logo" />
      </a>
      <p>{t.companyDesc}</p>
    </div>

    <!-- Column 2: Quick Links -->
    <div class="footer-col quick-links">
      <h3>{t.quickLinks}</h3>
      <nav>
        <ul>
          <li><a href={getLink('/#services')}>{t.linkServices}</a></li>
          <li><a href={getLink('/blog')}>{t.linkBlog}</a></li>
          <li><a href={getLink('/o-nas')}>{t.linkAbout}</a></li>
          <li><a href={getLink('/kontakt')}>{t.linkContact}</a></li>
        </ul>
      </nav>
    </div>

    <!-- Column 3: Legal Info -->
    <div class="footer-col legal-info">
      <h3>{t.legalInfo}</h3>
      <nav>
        <ul>
          <li><a href={getLink('/gdpr')}>{t.linkGdpr}</a></li>
          <li><a href={getLink('/obchodni-podminky')}>{t.linkTerms}</a></li>
          <li><a href={getLink('/smluvni-podminky')}>{t.linkContract}</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {year} Progressivo. {t.allRights}</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-bg-alt);
    padding-top: 0; /* Changed from 4rem because medallion is top */
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
  }

  /* Founder Medallion */
  .founder-medallion {
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    color: white;
    padding: 3rem 0;
    margin-bottom: 4rem;
  }

  .medallion-content {
    display: flex;
    align-items: center;
    gap: 2rem;
    justify-content: center;
  }

  .medallion-image-wrapper {
      width: 80px;
      height: 80px;
      flex-shrink: 0;
  }

  .medallion-image {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid var(--color-accent);
  }

  .medallion-text {
      max-width: 600px;
  }

  .medallion-text h4 {
      font-size: 1.25rem;
      margin: 0;
      color: white;
      font-weight: 700;
  }

  .role {
      color: var(--color-accent);
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin: 0.25rem 0 0.5rem;
      font-weight: 600;
  }

  .quote {
      font-style: italic;
      color: #cbd5e1;
      margin: 0.5rem 0;
  }

  .contact-link {
      display: inline-block;
      margin-top: 0.5rem;
      color: white;
      text-decoration: underline;
      text-decoration-color: var(--color-accent);
      text-underline-offset: 4px;
      font-size: 0.9rem;
  }

  .contact-link:hover {
      color: var(--color-accent);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns on desktop */
    gap: 2rem;
  }

  .footer-col h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    color: var(--color-text);
  }

  .company-info p {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-light);
    max-width: 300px;
  }

  .footer-logo img {
    height: 40px;
    width: auto;
    margin-bottom: 1rem;
  }

  .footer-col nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-col nav a {
    text-decoration: none;
    color: var(--color-text-light);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .footer-col nav a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 3rem auto 0;
    padding: 1.5rem 1rem 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
    color: var(--color-text-light);
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .footer-bottom p {
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr; /* Stacked columns */
      gap: 3rem;
      text-align: center;
    }

    .company-info {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .footer-col nav ul {
      align-items: center;
    }

    .medallion-content {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }
  }
</style>
