const currentLangObj = languages.find(l => l.code === lang) || languages[0];
const t = translations[lang] || translations.cs;

// Helper for localized internal links
const getLink = (path) => {
    if (path === '/') return lang === 'cs' ? '/' : `/${lang}/`;
    if (path.startsWith('#')) return lang === 'cs' ? `/${path}` : `/${lang}/${path}`;
    return lang === 'cs' ? path : `/${lang}${path}`;
};

// Navigation Links using the helper
const navLinks = [
    { href: getLink('/#services'), text: t.services },
    { href: getLink('/o-nas'), text: t.about },
    { href: getLink('/blog'), text: t.blog },
    { href: getLink('/kontakt'), text: t.contact },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container header-content">
    <a href={getLink('/')} class="logo">
      <img src="/images/Transparent-Logo-2-260x174.png" alt="Progressivo Logo" width="120" height="80" />
    </a>

    <nav class="nav-desktop">
      <ul class="nav-list">
        {navLinks.map((link) => (
          <li><a href={link.href}>{link.text}</a></li>
        ))}
      </ul>
    </nav>

    <div class="header-actions">
        <!-- Language Switcher Dropdown -->
        <div class="lang-switcher-dropdown">
            <button class="lang-btn" aria-label="Select Language" aria-expanded="false">
                <span class="flag">{currentLangObj.flag}</span>
                <span class="code">{currentLangObj.label}</span>
                <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
            </button>
            <div class="lang-menu">
                {languages.map(l => {
                    // Logic to preserve current path but change language
                    let targetPath = '/';
                    const segments = currentPath.split('/').filter(Boolean); // e.g. ['es', 'o-nas'] or ['o-nas']

                    // Identify if the first segment is a language code
                    const firstSegmentIsLang = languages.some(lang => lang.code === segments[0]);

                    if (l.code === 'cs') {
                         // Switching TO Czech (root)
                         if (firstSegmentIsLang) {
                             // Remove the lang prefix
                             const newSegments = segments.slice(1);
                             targetPath = '/' + newSegments.join('/');
                         } else {
                             // Already at root or some deep path in CS
                             targetPath = currentPath;
                         }
                    } else {
                        // Switching TO another language (e.g. 'en')
                        if (firstSegmentIsLang) {
                            // Replace the existing lang prefix
                            const newSegments = [l.code, ...segments.slice(1)];
                            targetPath = '/' + newSegments.join('/');
                        } else {
                            // Add the new lang prefix
                            const newSegments = [l.code, ...segments];
                            targetPath = '/' + newSegments.join('/');
                        }
                    }

                    // Fix root path edge cases
                    if (targetPath === '') targetPath = '/';
                    else if (targetPath === `/${l.code}`) targetPath = `/${l.code}/`;
                    else if (targetPath === '//') targetPath = '/';

                    return (
                        <a href={targetPath} class={`lang-item ${l.code === lang ? 'active' : ''}`} data-lang={l.code}>
                            <span class="flag">{l.flag}</span>
                            <span class="label">{l.label}</span>
                        </a>
                    )
                })}
            </div>
        </div>

        <button id="theme-toggle" aria-label="Toggle Dark Mode">
            <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
            <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
        </button>

        <button class="mobile-menu-toggle" aria-label="Open Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
  </div>

  <div class="mobile-menu">
      <nav>
          <ul>
            {navLinks.map((link) => (
                <li><a href={link.href}>{link.text}</a></li>
            ))}
          </ul>
      </nav>
  </div>
</header>

<script>
    // Theme Toggle Logic
    const themeToggle = document.getElementById('theme-toggle');
    const root = document.documentElement;

    // Check for saved user preference, if any, on load
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
        root.classList.toggle('dark', savedTheme === 'dark');
    } else {
        // Check system preference
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        root.classList.toggle('dark', systemPrefersDark);
    }

    themeToggle.addEventListener('click', () => {
        root.classList.toggle('dark');
        localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
    });

    // Mobile Menu Logic
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');

    mobileMenuToggle.addEventListener('click', () => {
        mobileMenuToggle.classList.toggle('open');
        mobileMenu.classList.toggle('open');
        document.body.style.overflow = mobileMenu.classList.contains('open') ? 'hidden' : '';
    });

    // Language Switcher Dropdown Logic
    const langBtn = document.querySelector('.lang-btn');
    const langMenu = document.querySelector('.lang-menu');
    const langSwitcher = document.querySelector('.lang-switcher-dropdown');

    langBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const expanded = langBtn.getAttribute('aria-expanded') === 'true';
        langBtn.setAttribute('aria-expanded', !expanded);
        langMenu.classList.toggle('show');
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
        if (!langSwitcher.contains(e.target)) {
            langMenu.classList.remove('show');
            langBtn.setAttribute('aria-expanded', 'false');
        }
    });

    // Save language preference on click
    document.querySelectorAll('.lang-item').forEach(item => {
        item.addEventListener('click', () => {
             const selectedLang = item.getAttribute('data-lang');
             localStorage.setItem('preferred-lang', selectedLang);
        });
    });
</script>

