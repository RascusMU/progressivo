---
import { ui, defaultLang } from '../i18n/ui';

const { lang = defaultLang } = Astro.props;

const t = ui[lang] || ui[defaultLang];
---

<form action="mailto:info@progressivo.eu" method="post" enctype="text/plain" class="contact-form">
    <div class="form-group">
        <label for="name">{t.form.name_label}</label>
        <input type="text" id="name" name="name" placeholder={t.form.name_placeholder} required />
    </div>

    <div class="form-group">
        <label for="email">{t.form.email_label}</label>
        <input type="email" id="email" name="email" placeholder={t.form.email_placeholder} required />
    </div>

    <div class="form-group">
        <label for="message">{t.form.message_label}</label>
        <textarea id="message" name="message" rows="5" placeholder={t.form.message_placeholder} required></textarea>
    </div>

    <button type="submit" class="submit-btn">{t.buttons.submit}</button>
</form>

<style>
    .contact-form {
        max-width: 600px;
        margin: 2rem 0;
        background: rgba(255, 255, 255, 0.5);
        padding: 2rem;
        border-radius: 1rem;
        border: 1px solid var(--color-border);
        box-shadow: var(--shadow-sm);
    }

    :global(.dark) .contact-form {
        background: rgba(30, 41, 59, 0.5);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    input, textarea {
        width: 100%;
        padding: 0.75rem;
        border-radius: 0.5rem;
        border: 1px solid var(--color-border);
        background: var(--color-bg);
        color: var(--color-text);
        font-family: var(--font-body);
        font-size: 1rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    input:focus, textarea:focus {
        outline: none;
        border-color: var(--color-accent);
        box-shadow: 0 0 0 3px rgba(217, 119, 6, 0.1);
    }

    .submit-btn {
        background-color: var(--color-accent);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 9999px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s;
        font-size: 1rem;
    }

    .submit-btn:hover {
        background-color: var(--color-accent-hover);
    }
</style>
