---
const { lang = 'cs' } = Astro.props;

const translations = {
  cs: {
    name: "Jméno",
    email: "Email",
    message: "Zpráva",
    submit: "Odeslat",
    placeholder_name: "Jan Novák",
    placeholder_email: "jan@example.com",
    placeholder_message: "Vaše zpráva..."
  },
  en: {
    name: "Name",
    email: "Email",
    message: "Message",
    submit: "Send",
    placeholder_name: "John Doe",
    placeholder_email: "john@example.com",
    placeholder_message: "Your message..."
  },
  de: {
    name: "Name",
    email: "E-Mail",
    message: "Nachricht",
    submit: "Senden",
    placeholder_name: "Max Mustermann",
    placeholder_email: "max@example.com",
    placeholder_message: "Ihre Nachricht..."
  },
  es: {
    name: "Nombre",
    email: "Correo electrónico",
    message: "Mensaje",
    submit: "Enviar",
    placeholder_name: "Juan Pérez",
    placeholder_email: "juan@example.com",
    placeholder_message: "Su mensaje..."
  },
  ru: {
    name: "Имя",
    email: "Электронная почта",
    message: "Сообщение",
    submit: "Отправить",
    placeholder_name: "Иван Иванов",
    placeholder_email: "ivan@example.com",
    placeholder_message: "Ваше сообщение..."
  }
};

const t = translations[lang] || translations.cs;
---

<form action="mailto:info@progressivo.eu" method="post" enctype="text/plain" class="contact-form">
    <div class="form-group">
        <label for="name">{t.name}</label>
        <input type="text" id="name" name="name" placeholder={t.placeholder_name} required />
    </div>

    <div class="form-group">
        <label for="email">{t.email}</label>
        <input type="email" id="email" name="email" placeholder={t.placeholder_email} required />
    </div>

    <div class="form-group">
        <label for="message">{t.message}</label>
        <textarea id="message" name="message" rows="5" placeholder={t.placeholder_message} required></textarea>
    </div>

    <button type="submit" class="submit-btn">{t.submit}</button>
</form>

<style>
    .contact-form {
        max-width: 600px;
        margin: 2rem 0;
        background: rgba(255, 255, 255, 0.5);
        padding: 2rem;
        border-radius: 1rem;
        border: 1px solid var(--color-border);
        box-shadow: var(--shadow-sm);
    }

    :global(.dark) .contact-form {
        background: rgba(30, 41, 59, 0.5);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    input, textarea {
        width: 100%;
        padding: 0.75rem;
        border-radius: 0.5rem;
        border: 1px solid var(--color-border);
        background: var(--color-bg);
        color: var(--color-text);
        font-family: var(--font-body);
        font-size: 1rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    input:focus, textarea:focus {
        outline: none;
        border-color: var(--color-accent);
        box-shadow: 0 0 0 3px rgba(217, 119, 6, 0.1);
    }

    .submit-btn {
        background-color: var(--color-accent);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 9999px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s;
        font-size: 1rem;
    }

    .submit-btn:hover {
        background-color: var(--color-accent-hover);
    }
</style>
