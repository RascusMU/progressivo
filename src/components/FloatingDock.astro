---
const { lang = 'cs' } = Astro.props;

const translations = {
  cs: {
    about: "O nás",
    blog: "Blog",
  },
  en: {
    about: "About Us",
    blog: "Blog",
  },
  de: {
    about: "Über uns",
    blog: "Blog",
  },
  es: {
    about: "Sobre nosotros",
    blog: "Blog",
  },
  ru: {
    about: "О нас",
    blog: "Блог",
  }
};

const t = translations[lang] || translations.cs;

// Helper for links
const getLink = (path) => {
    if (path === '/') return lang === 'cs' ? '/' : `/${lang}/`;
    if (path.startsWith('#')) return lang === 'cs' ? `/${path}` : `/${lang}/${path}`; // Ensure anchor links are routed via the language page
    return lang === 'cs' ? path : `/${lang}${path}`;
};

// WhatsApp Link
const whatsappLink = "https://wa.me/50768509698?text=Ahoj%2C%20m%C3%A1m%20z%C3%A1jem%20o%20spolupr%C3%A1ci";
