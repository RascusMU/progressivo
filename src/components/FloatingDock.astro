<style>
  .floating-dock {
    position: fixed;
    bottom: calc(1rem + env(safe-area-inset-bottom));
    left: 50%;
    transform: translateX(-50%) translateY(0);
    z-index: 9999;
    opacity: 1;
    pointer-events: auto;
    transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1), opacity 0.4s ease;
  }

  /* Scroll Effects */
  .floating-dock.scrolled-down {
    opacity: 0.8;
    transform: translateX(-50%) scale(0.98);
  }

  .floating-dock.scrolled-up {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }

  /* The Capsule */
  .dock-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 0 1.5rem;
    height: 64px;
    border-radius: 9999px;

    /* Material: Soft Glass */
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 40px -10px rgba(0,0,0,0.1);
  }

  :global(.dark) .dock-content {
    background: rgba(15, 23, 42, 0.55);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 10px 40px -10px rgba(0,0,0,0.3);
  }

  /* Items */
  .dock-item {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .logo-btn img {
    height: 32px;
    width: auto;
    filter: grayscale(100%) opacity(0.8);
    transition: filter 0.2s;
  }

  .logo-btn:hover img {
     filter: grayscale(0%) opacity(1);
  }

  :global(.dark) .logo-btn img {
     filter: invert(1) grayscale(100%) opacity(0.8);
  }

  :global(.dark) .logo-btn:hover img {
     filter: invert(1) grayscale(0%) opacity(1);
  }


  .text-link {
    font-family: 'Manrope', sans-serif;
    font-weight: 600;
    font-size: 0.95rem;
    white-space: nowrap;
  }

  .text-link:hover {
    color: var(--color-accent);
  }

  .text-link.cta {
    font-weight: 800;
    color: var(--color-accent);
  }

  .text-link.cta:hover {
     opacity: 0.8;
  }

  .wa-btn {
    color: #25D366; /* WhatsApp Green */
  }

  .wa-btn:hover {
    transform: scale(1.1);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .floating-dock {
        width: calc(100% - 2rem);
        max-width: 400px; /* Sanity check */
    }

    .dock-content {
        width: 100%;
        justify-content: space-between; /* Distribute evenly */
        gap: 0.5rem; /* Smaller gap */
        padding: 0 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-dock, .dock-content, .dock-item {
      transition: none !important;
      animation: none !important;
    }
    .floating-dock.scrolled-down {
        transform: translateX(-50%); /* No scale */
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const dock = document.querySelector('.floating-dock');
    if (!dock) return;

    let lastScrollY = window.scrollY;
    let ticking = false;

    function update() {
        const currentScrollY = window.scrollY;

        // Scroll Direction Effect
        // Ignore small movements for stability
        if (Math.abs(currentScrollY - lastScrollY) > 5) {
            if (currentScrollY > lastScrollY) {
                // Scrolling DOWN
                dock.classList.add('scrolled-down');
                dock.classList.remove('scrolled-up');
            } else {
                // Scrolling UP
                dock.classList.add('scrolled-up');
                dock.classList.remove('scrolled-down');
            }
        }

        lastScrollY = currentScrollY;
        ticking = false;
    }

    window.addEventListener('scroll', () => {
        if (!ticking) {
            window.requestAnimationFrame(update);
            ticking = true;
        }
    }, { passive: true });

    // Initial check
    update();
  });
</script>
