---
const { lang = 'cs' } = Astro.props;

const translations = {
  cs: {
    services: "Služby",
    collaborate: "Spolupracovat",
  },
  en: {
    services: "Services",
    collaborate: "Collaborate",
  },
  de: {
    services: "Dienstleistungen",
    collaborate: "Zusammenarbeit",
  },
  es: {
    services: "Servicios",
    collaborate: "Colaborar",
  },
  ru: {
    services: "Услуги",
    collaborate: "Сотрудничество",
  }
};

const t = translations[lang] || translations.cs;

// Helper for links
const getLink = (path) => {
    if (path === '/') return lang === 'cs' ? '/' : `/${lang}/`;
    if (path.startsWith('#')) return lang === 'cs' ? `/${path}` : `/${lang}/${path}`; // Anchor links needs to work on subpages too, so we prepend /
    return lang === 'cs' ? path : `/${lang}${path}`;
};

// WhatsApp Link (same as previous button)
const whatsappLink = "https://wa.me/50768509698?text=Ahoj%2C%20m%C3%A1m%20z%C3%A1jem%20o%20spolupr%C3%A1ci";

---

