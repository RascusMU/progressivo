  <div class="dock-content">
    <!-- 1. Logo (Home) -->
    <a href={getLink('/')} class="dock-item logo-btn" aria-label="Home">
        <img src="/images/Original Logo Symbol.png" alt="Home" />
    </a>

    <!-- 2. Services -->
    <a href={getLink('#services')} class="dock-item text-link">
      {t.services}
    </a>

    <!-- 3. Collaborate (CTA) -->
    <a href={getLink('#kontakt')} class="dock-item text-link cta">
      {t.collaborate}
    </a>

    <!-- 4. WhatsApp -->
    <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="dock-item wa-btn" aria-label="WhatsApp">
