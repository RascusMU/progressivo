---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Filter for Czech posts: Assume they DO NOT have a hyphen-lang suffix like -en.md
// or explicitly include them if your naming convention is different.
const allPosts = await getCollection('blog');
const posts = allPosts.filter((post) => {
    // Check if id ends with -xx.md where xx is a 2-letter code
    return !/-(en|de|ru|es)\.md$/i.test(post.id);
});

// Sort by date descending
posts.sort((a, b) => {
    const dateA = a.data.date || new Date(0);
    const dateB = b.data.date || new Date(0);
    return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Blog | Progressivo">
  <div class="container page-content animate-on-scroll">
      <div class="blog-grid">
        {posts.length > 0 ? posts.map((post) => (
          <article class="blog-card">
            <div class="card-content">
                <h2>
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                {post.data.date && (
                    <time datetime={post.data.date.toISOString()} class="post-date">
                    {post.data.date.toLocaleDateString('cs-CZ')}
                    </time>
                )}
                <p class="post-excerpt">
                    {post.data.description
                    ? post.data.description
                    : post.body
                        ? post.body.substring(0, 150).replace(/[#*]/g, '') + '...'
                        : ''}
                </p>
                <a href={`/blog/${post.slug}`} class="read-more">Číst více &rarr;</a>
            </div>
          </article>
        )) : (
            <p>Zatím zde nejsou žádné články.</p>
        )}
      </div>
  </div>
</Layout>

<style>
  .page-content {
      padding-top: 8rem;
      padding-bottom: 4rem;
  }

  .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
  }

  .blog-card {
      background-color: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: var(--shadow-card);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      display: flex;
      flex-direction: column;
  }

  .blog-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .blog-card h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
  }

  .blog-card h2 a {
      color: var(--color-text);
      text-decoration: none;
  }

  .blog-card h2 a:hover {
      color: var(--color-accent);
  }

  .post-date {
      font-size: 0.875rem;
      color: var(--color-text-light);
      margin-bottom: 1rem;
      display: block;
  }

  .post-excerpt {
      color: var(--color-text-light);
      line-height: 1.6;
      margin-bottom: 1.5rem;
      flex-grow: 1;
  }

  .read-more {
      color: var(--color-accent);
      font-weight: 600;
      font-size: 0.95rem;
      margin-top: auto;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
  }

  .read-more:hover {
      gap: 0.5rem;
  }
</style>
