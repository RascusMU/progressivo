        padding-right: 0;
        order: 1;
        text-align: left;
     }

     .founder-image-column {
        order: 2;
     }

     .founder-image-wrapper {
        margin-left: 0;
        transform: none;
        max-width: 500px;
     }
  }

  @media (max-width: 768px) {
    .services-grid {
        grid-template-columns: 1fr;
    }

    .span-2, .span-3 {
        grid-column: span 1;
    }

    /* Founder Mobile adjustments */
    .founder-content {
      gap: 2rem;
    }

    .editorial-title {
        font-size: 2.25rem;
        margin-bottom: 1.5rem;
    }

    .founder-text-column {
        padding: 0 1rem;
    }

    .founder-image-wrapper {
        width: 100%;
        max-width: 100%;
        margin-left: 0;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>
