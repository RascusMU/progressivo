  .founder-section p,
  .founder-section a,
  .founder-section button,
  .founder-section span {
      color: var(--color-accent) !important;
  }

  /* Helper to target the audio player specific parts if needed */
  .founder-section :global(.founder-audio-player .play-btn),
  .founder-section :global(.founder-audio-player .audio-disclaimer) {
      color: var(--color-accent) !important;
      border-color: var(--color-accent) !important;
  }

  .founder-content {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr; /* Text wider than image */
    align-items: center;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    gap: 4rem;
  }

  .founder-text-column {
    z-index: 10;
    padding-right: 0;
    max-width: 600px; /* Prevent text from touching the image */
  }

  .editorial-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2.5rem;
    color: var(--color-accent);
  }

  .founder-prose {
    font-family: 'Manrope', sans-serif;
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--color-accent);
    margin-bottom: 3rem;
  }

  .founder-name {
    font-weight: 800;
    font-size: 1.35rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
    display: block;
  }

  .founder-prose p {
    margin-bottom: 1.5rem;
  }

  .founder-prose p:last-child {
    margin-bottom: 0;
  }

  .founder-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .founder-link {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .founder-link:hover {
    border-color: var(--color-accent);
  }

  .founder-image-column {
    position: relative;
    z-index: 1;
  }

  .founder-image-wrapper {
    position: relative;
    width: 100%;
    margin-left: -4rem; /* The Magazine "Overlap" */

    /* Premium Paper / Scroll Look */
    background-color: #fcfbf9; /* Warm Paper */
    padding: 0; /* Removed border/frame effect */
    box-shadow: 0 20px 30px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

    /* Animation Setup */
    transform-origin: top right;
    transition:
      mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      -webkit-mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      opacity 1.2s ease-out;
  }

  /* Stav ČEKÁNÍ (přidá JS okamžitě po načtení) */
  .founder-image-wrapper.waiting {
    /* Maska: Gradient simuluje měkký ohyb papíru */
    mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    mask-size: 300% 300%;
    mask-position: 100% 0%; /* Start: Skryto (nebo jen roh) */

    /* Safari / Webkit support - KRITICKÉ PRO iOS */
    -webkit-mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    -webkit-mask-size: 300% 300%;
    -webkit-mask-position: 100% 0%;

    /* Fyzika: Zmenšené a natočené */
    transform: scale(0.92) rotate(-2deg);
    opacity: 0.8;
  }

  /* Stav ODHALENÍ (přidá JS při scrollu) */
  .founder-image-wrapper.visible {
    /* Reset masky = plně viditelné */
    mask-position: 0% 100%;
    -webkit-mask-position: 0% 100%;

    /* Reset fyziky = narovnáno */
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }

  .founder-image {
    width: 100%;
    height: auto;
    display: block;
    /* Removed border-radius to look like cut paper or keep it straight */
    border-radius: 2px;
    object-fit: cover;
  }

  /* Stats Section */
  .stats-section {
    padding: 3rem 0;
    background-color: var(--color-accent);
    color: white;
  }

  .stats-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 3.5rem;
    font-weight: 800;
    font-family: 'Plus Jakarta Sans', sans-serif;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.125rem;
    font-weight: 500;
    opacity: 0.9;
  }

  /* Services Section */
  .section-services {
    padding: 5rem 0;
    background-color: var(--color-bg-alt);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background-color: var(--color-accent);
    border-radius: 2px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: var(--color-bg-card);
    background-image: var(--spotlight);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Changed duration to 0.3s for smooth lift */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;
    border: var(--card-border);
    transform-style: preserve-3d;
    perspective: 1000px;
    /* Removed max-width: 350px to allow filling the grid cell, especially for spans */
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .span-2 {
      grid-column: span 2;
  }

  .span-3 {
      grid-column: span 3;
  }

  /* Light Mode Specifics - Premium Paper Feel */
  :global(:root:not(.dark)) .service-card:hover {
    transform: translateY(-5px); /* Physical lift */
    box-shadow: 0 20px 25px -5px rgba(120, 113, 108, 0.1), 0 10px 10px -5px rgba(120, 113, 108, 0.04); /* Deepened warm shadow */
    border-color: rgba(217, 119, 6, 0.3); /* Subtle Amber edge highlight */
  }

  :global(:root:not(.dark)) .service-image {
      filter: sepia(0.05) contrast(0.95) brightness(1.02); /* Calmed down, warm film look */
      transition: filter 0.3s ease, transform 0.5s ease;
  }

