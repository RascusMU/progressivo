---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
    { params: { lang: 'es' } },
    { params: { lang: 'ru' } },
  ];
}

const { lang } = Astro.params;
const allServices = await getCollection('services');
let services = allServices.filter(service => service.id.startsWith(lang + '/'));

const desiredOrder = [
  'analyza-dna',
  'efektivni-integrace',
  'it-podpora',
  'expatriace-viza',
  'nemovitosti',
  'preklady',
  'prodej-techniky',
  'online-kurzy'
];

services.sort((a, b) => {
  const slugA = a.id.split('/').pop().replace(/\.md$/, '');
  const slugB = b.id.split('/').pop().replace(/\.md$/, '');
  return desiredOrder.indexOf(slugA) - desiredOrder.indexOf(slugB);
});

