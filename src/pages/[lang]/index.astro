---
import Layout from '../../layouts/Layout.astro';
import FounderAudioPlayer from '../../components/FounderAudioPlayer.astro';
import { getCollection } from 'astro:content';
import { ui, defaultLang } from '../../i18n/ui';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
    { params: { lang: 'es' } },
    { params: { lang: 'ru' } },
  ];
}

const { lang } = Astro.params;
const allServices = await getCollection('services');
let services = allServices.filter(service => service.id.startsWith(lang + '/'));
const t = ui[lang] || ui[defaultLang];

const desiredOrder = [
  'analyza-dna',
  'efektivni-integrace',
  'it-podpora',
  'expatriace-viza',
  'nemovitosti',
  'preklady',
  'prodej-techniky',
  'online-kurzy'
];

services.sort((a, b) => {
  const slugA = a.id.split('/').pop().replace(/\.md$/, '');
  const slugB = b.id.split('/').pop().replace(/\.md$/, '');
  return desiredOrder.indexOf(slugA) - desiredOrder.indexOf(slugB);
});
---

<Layout lang={lang} title={`${t.pages.home_title} | Progressivo`}>
  <script>
    document.addEventListener('astro:page-load', () => {
        // Stats Animation
        const statsSection = document.querySelector('.stats-section');
        const stats = document.querySelectorAll('.stat-number');
        let started = false;

        function startCounting() {
          if (started) return;

          stats.forEach(stat => {
            if (!(stat instanceof HTMLElement)) return;
            const targetStr = stat.getAttribute('data-target');
            if (!targetStr) return;

            const target = +targetStr;
            const duration = 2000; // 2 seconds
            const increment = target / (duration / 16); // 60fps

            let current = 0;
            const updateCount = () => {
              current += increment;
              if (current < target) {
                let suffix = '';
                if (stat.nextElementSibling instanceof HTMLElement && stat.nextElementSibling.innerText.includes('/7') && target === 24) {
                     suffix = '';
                } else if (target === 15) {
                     suffix = '+';
                }
                stat.innerText = Math.ceil(current) + suffix;
                requestAnimationFrame(updateCount);
              } else {
                stat.innerText = target + (target === 15 ? '+' : '');
              }
            };
            updateCount();
          });
          started = true;
        }

        if (statsSection) {
            const observer = new IntersectionObserver((entries) => {
                if (entries[0].isIntersecting) {
                    startCounting();
                }
            }, { threshold: 0.5 });

            observer.observe(statsSection);
        }

        // Founder Image Unroll Animation
        const founderImageWrapper = document.querySelector('.founder-image-wrapper');
        if (founderImageWrapper) {
            // Progressive Enhancement: Only hide if IntersectionObserver is supported
            if ('IntersectionObserver' in window) {
                founderImageWrapper.classList.add('waiting');

                const founderObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.remove('waiting');
                            entry.target.classList.add('visible');
                            founderObserver.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.2 });
                founderObserver.observe(founderImageWrapper);

                // FAILSAFE: Ensure image becomes visible even if observer fails or takes too long
                setTimeout(() => {
                    if (founderImageWrapper.classList.contains('waiting')) {
                        founderImageWrapper.classList.remove('waiting');
                        founderImageWrapper.classList.add('visible');
                    }
                }, 3000); // 3 seconds safety timeout
            }
        }

        // 3D Tilt Effect
        const cards = document.querySelectorAll('.service-card');

        if (window.matchMedia("(min-width: 1024px)").matches) {
            cards.forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    // Only run in Dark Mode (Cyberpunk style)
                    if (!document.documentElement.classList.contains('dark')) return;

                    // @ts-ignore
                    const rect = card.getBoundingClientRect();
                    // @ts-ignore
                    const x = e.clientX - rect.left;
                    // @ts-ignore
                    const y = e.clientY - rect.top;

                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;

                    const rotateX = ((y - centerY) / centerY) * -5; // Max 5 deg rotation
                    const rotateY = ((x - centerX) / centerX) * 5;

                    // Spotlight Effect
                    const spotX = (e.clientX - rect.left) / rect.width * 100;
                    const spotY = (e.clientY - rect.top) / rect.height * 100;
                    // @ts-ignore
                    card.style.setProperty('--spotlight', `radial-gradient(circle at ${spotX}% ${spotY}%, rgba(255,255,255,0.1) 0%, transparent 50%)`);

                    // @ts-ignore
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
                });

                card.addEventListener('mouseleave', () => {
                    // Only run in Dark Mode
                    if (!document.documentElement.classList.contains('dark')) {
                        // Ensure any residual transform is cleared so CSS can take over
                        // @ts-ignore
                        card.style.transform = '';
                        return;
                    }

                    // @ts-ignore
                    card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
                });
            });
        }
    });
  </script>

  <!-- Editorial Hero Section -->
  <section class="editorial-hero">
    <div class="container hero-content">
      <h1 class="hero-title" set:html={t.pages.home.hero_title}></h1>
      <p class="hero-subtitle">{t.pages.home.hero_subtitle}</p>
      <a href="#services" class="editorial-cta">{t.buttons.collaborate} <span class="arrow">→</span></a>
    </div>
  </section>

  <!-- Founder Section -->
  <section id="founder" class="founder-section animate-on-scroll">
    <div class="container founder-content">
      <div class="founder-text-column">
        <h2 class="editorial-title">{t.pages.home.founder_title}</h2>
        <div class="founder-prose">
          <p class="founder-name">{t.pages.home.founder_name}</p>
          <p>{t.pages.home.founder_p1}</p>
          <p>{t.pages.home.founder_p2}</p>
          <p>{t.pages.home.founder_p3}</p>
        </div>

        <div class="founder-actions">
          <a href="https://cingel.cz" target="_blank" class="founder-link">{t.buttons.founder_story}</a>
          <FounderAudioPlayer
            src="/audio/founder-intro.mp3"
            buttonText={t.buttons.play_audio}
            disclaimerText={t.pages.home.audio_note}
          />
        </div>
      </div>

      <div class="founder-image-column">
        <div class="founder-image-wrapper">
          <img src="/images/tatka-pise.webp" alt="Jaroslav Cingel" class="founder-image" />
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="stats-section animate-on-scroll">
    <div class="container stats-container">
      <div class="stat-item">
        <div class="stat-number" data-target="15">0</div>
        <div class="stat-label">{t.pages.home.stats_years}</div>
      </div>
      <div class="stat-item">
        <div class="stat-number" data-target="3">0</div>
        <div class="stat-label">{t.pages.home.stats_continents}</div>
      </div>
      <div class="stat-item">
        <div class="stat-number" data-target="24">0</div>
        <div class="stat-label">{t.pages.home.stats_support}</div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="section-services animate-on-scroll">
    <div class="container">
      <h2 class="section-title">{t.pages.home.services_title}</h2>
      <div class="services-grid">
        {services.map((service) => {
          const slug = service.id.split('/').pop().replace(/\.md$/, '');

          let spanClass = 'span-1';
          if (slug === 'analyza-dna' || slug === 'expatriace-viza') {
            spanClass = 'span-2';
          } else if (slug === 'online-kurzy') {
            spanClass = 'span-3';
          }

          const cardClass = `service-card ${spanClass}`;

          return (
          <a href={`/${lang}/sluzby/${slug}`} class={cardClass}>
            <div class="card-media">
                <img src={service.data.image || "/images/mapa-svetabusines.webp"} alt={service.data.title} class="service-image" />
            </div>
            <h3>{service.data.title}</h3>
            <p>{service.data.description.length > 150 ? service.data.description.slice(0, 150) + '...' : service.data.description}</p>
          </a>
        )})}
      </div>
    </div>
  </section>
</Layout>

<style>
  /*
   * EDITORIAL HERO SECTION
   * Concept: "Tiché sebevědomí"
   */
  .editorial-hero {
    /* Massive top padding, textured background (inherited from body/layout if present, else clean) */
    padding-top: max(15vh, 120px);
    padding-bottom: 8rem;
    padding-left: 0;
    padding-right: 0;
    text-align: left; /* Strict left alignment */
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Left align items */
    gap: 0; /* Spacing handled by margins */
    max-width: 1400px; /* Allow it to breathe */
    padding: 0 1.5rem;
    animation: fadeUp 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  /* Entrance Animation */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* MEGA-TYPE H1 */
  .hero-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(3.5rem, 11vw, 9rem);
    font-weight: 800; /* ExtraBold */
    line-height: 0.95;
    letter-spacing: -0.04em;
    color: #1a1a1a; /* Hard Ink */
    margin-bottom: 3rem;
    max-width: 100%;
  }

  /* Dark Mode H1 */
  :global(html.dark) .hero-title {
    color: #f5f5f4; /* Warm White */
  }

  /* Subline */
  .hero-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(1.125rem, 2vw, 1.35rem);
    line-height: 1.6;
    color: rgba(26, 26, 26, 0.8);
    max-width: 600px;
    margin-bottom: 3rem;
    margin-top: 0;
  }

  :global(html.dark) .hero-subtitle {
    color: rgba(245, 245, 244, 0.8);
  }

  /* Editorial CTA (Link style) */
  .editorial-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Manrope', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  :global(html.dark) .editorial-cta {
    color: #f5f5f4;
  }

  .editorial-cta .arrow {
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    display: inline-block;
  }

  .editorial-cta:hover {
    color: #d97706; /* Amber-600 */
    border-color: rgba(217, 119, 6, 0.3);
  }

  .editorial-cta:hover .arrow {
    transform: translateX(6px);
  }

  /* Founder Section - Magazine Layout */
  .founder-section {
    padding: 8rem 0;
    background-color: var(--color-bg);
    overflow: hidden; /* For safety with negative margins */
    /* FORCE AMBER INK TEXT */
    color: var(--color-accent);
  }

  /* Force Amber Ink on all text elements inside Founder Section */
