---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
import { getEntry, render } from 'astro:content';
import { ui, defaultLang } from '../../i18n/ui';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
    { params: { lang: 'es' } },
    { params: { lang: 'ru' } },
  ];
}

const { lang } = Astro.params;
const id = lang === 'cs' ? 'contact' : `${lang}/contact`;
const entry = await getEntry('pages', id);

const { Content } = entry ? await render(entry) : { Content: null };
const t = ui[lang] || ui[defaultLang];

// FAQ Parsing
let schema = null;
if (entry && entry.body) {
    const faqRegex = /<details>[\s\S]*?<summary>(.*?)<\/summary>[\s\S]*?<p>(.*?)<\/p>[\s\S]*?<\/details>/g;
    const matches = [...entry.body.matchAll(faqRegex)];

    if (matches.length > 0) {
        const questions = matches.map(match => ({
            "@type": "Question",
            "name": match[1].trim(),
            "acceptedAnswer": {
                "@type": "Answer",
                "text": match[2].trim()
            }
        }));

        schema = {
            "@context": "https://schema.org",
            "@type": "FAQPage",
            "mainEntity": questions
        };
    }
}
---

<Layout lang={lang} title={`${t.pages.contact_title} | Progressivo`} schema={schema}>
  <main class="container page-content animate-on-scroll">
    <div class="contact-grid">
      <!-- Levý sloupec: Info & Kontext -->
      <div class="info-column">
        <h1>{t.pages.contact_title}</h1>
        <p class="intro-text">{t.pages.contact.intro}</p>

        <div class="contact-details protected-content">
          <div class="detail-item">
            <span class="detail-label">{t.pages.contact.phone}</span>
            <span class="detail-value font-mono">+507 6850-9698</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">{t.pages.contact.email}</span>
            <span class="detail-value font-mono">info@progressivo.eu</span>
          </div>
        </div>

        <a href="https://wa.me/50768509698" target="_blank" rel="noopener noreferrer" class="whatsapp-link">
          {t.buttons.whatsapp}
        </a>

        <div class="map-wrapper" id="map-container">
          <div class="map-placeholder" id="map-placeholder">
            <div class="placeholder-content">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="map-icon">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <button id="show-map-btn" class="show-map-btn" aria-label={t.buttons.show_map}>
                {t.buttons.show_map}
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Pravý sloupec: Akce (Formulář) -->
      <div class="action-column">
        <ContactForm lang={lang} />
      </div>
    </div>

    <!-- FAQ Accordion -->
    <div class="faq-section">
      <div class="prose lg:prose-xl">
        {Content ? <Content /> : <p>Obsah se připravuje.</p>}
      </div>
    </div>
  </main>
</Layout>

<style>
  .page-content {
      padding-top: 4rem;
      padding-bottom: 4rem;
  }

  .contact-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 3rem;
      margin-bottom: 4rem;
  }

  @media (min-width: 1024px) {
      .contact-grid {
          grid-template-columns: 1fr 1fr;
          gap: 6rem;
      }
  }

  /* Typography */
  h1 {
      font-family: var(--font-heading);
      font-size: 3rem;
      font-weight: 700;
      color: var(--color-text);
      margin-bottom: 1.5rem;
      line-height: 1.1;
  }

  .intro-text {
      font-family: var(--font-body);
      font-size: 1.125rem;
      color: var(--color-text-muted);
      margin-bottom: 2.5rem;
      max-width: 40ch;
  }

  .font-mono {
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Mono', 'Droid Sans Mono', 'Source Code Pro', monospace;
  }

  /* Protected Content */
  .protected-content {
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
  }

  .contact-details {
      margin-bottom: 2.5rem;
  }

  .detail-item {
      margin-bottom: 1rem;
      display: flex;
      flex-direction: column;
  }

  .detail-label {
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 0.25rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
  }

  .detail-value {
      font-size: 1.25rem;
      color: var(--color-text);
      font-weight: 500;
  }

  /* WhatsApp Link */
  .whatsapp-link {
      display: inline-block;
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--color-accent);
      text-decoration: none;
      margin-bottom: 3rem;
      padding-bottom: 0.25rem;
      border-bottom: 2px solid transparent;
      transition: border-color 0.2s;
  }

  .whatsapp-link:hover {
      border-bottom-color: var(--color-accent);
  }

  /* Map */
  .map-wrapper {
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: var(--shadow-sm);
      height: 300px;
      position: relative;
      background-color: var(--color-bg-card);
      border: 1px solid var(--color-border);
  }

  .map-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--color-bg-card);
      transition: opacity 0.3s ease;
  }

  .placeholder-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
  }

  .map-icon {
      color: var(--color-text-muted);
  }

  .show-map-btn {
      background-color: transparent;
      border: 1px solid var(--color-border);
      color: var(--color-text);
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-family: var(--font-heading);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 1rem;
      box-shadow: var(--shadow-sm);
  }

  .show-map-btn:hover {
      border-color: var(--color-accent);
      color: var(--color-accent);
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
  }

  /* Map styling once loaded */
  :global(.map-frame) {
      width: 100%;
      height: 100%;
      border: 0;
      filter: grayscale(100%) invert(0.9);
      transition: filter 0.3s ease;
      display: block;
      animation: fadeIn 0.5s ease-out;
  }

  :global(.dark) :global(.map-frame) {
      filter: grayscale(100%) invert(0.1);
  }

  @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
  }

  /* FAQ Styling Override */
  .faq-section {
      margin-top: 4rem;
      border-top: 1px solid var(--color-border);
      padding-top: 4rem;
  }

  /* Accordion Styling (targeting generated HTML) */
  :global(.faq-accordion details) {
      border-bottom: 1px solid var(--color-border);
      padding: 1.5rem 0;
  }

  :global(.faq-accordion summary) {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: 600;
      cursor: pointer;
      list-style: none;
      position: relative;
      padding-right: 2rem;
  }

  :global(.faq-accordion summary::-webkit-details-marker) {
      display: none;
  }

  :global(.faq-accordion summary::after) {
      content: '+';
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      font-weight: 400;
      font-size: 1.5rem;
      color: var(--color-text-muted);
      transition: transform 0.2s;
  }

  :global(.faq-accordion details[open] summary::after) {
      transform: translateY(-50%) rotate(45deg);
  }

  :global(.faq-accordion p) {
      margin-top: 1rem;
      color: var(--color-text-muted);
      line-height: 1.6;
  }
</style>

<script>
    // Prevent context menu and copy on protected content
    const protectedContent = document.querySelector('.protected-content');
    if (protectedContent) {
        protectedContent.addEventListener('contextmenu', (e) => e.preventDefault());
        protectedContent.addEventListener('copy', (e) => e.preventDefault());
        protectedContent.addEventListener('touchstart', (e) => {
             // Basic prevention of long-press selection on some devices
             // Note: CSS user-select: none handles most of it
        }, {passive: true});
    }

    // Click to Load Map Logic
    const showMapBtn = document.getElementById('show-map-btn');
    const mapContainer = document.getElementById('map-container');

    if (showMapBtn && mapContainer) {
        showMapBtn.addEventListener('click', () => {
            const iframe = document.createElement('iframe');
            // Using legacy q parameter as requested: Oceanía Business Plaza 1000, Panama City
            // Encoded: Ocean%C3%ADa+Business+Plaza+1000%2C+Panama+City
            // Adding z=16 for zoom level ~15-17
            iframe.src = "https://maps.google.com/maps?q=Ocean%C3%ADa+Business+Plaza+1000%2C+Panama+City&t=m&z=16&output=embed&iwloc=near";
            iframe.classList.add('map-frame');
            iframe.setAttribute('loading', 'lazy');
            iframe.setAttribute('allowfullscreen', '');
            iframe.setAttribute('referrerpolicy', 'no-referrer-when-downgrade');
            iframe.setAttribute('title', 'Google Maps - Oceanía Business Plaza');

            // Clear placeholder and append iframe
            mapContainer.innerHTML = '';
            mapContainer.appendChild(iframe);
        });
    }
</script>
