---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
    { params: { lang: 'es' } },
    { params: { lang: 'ru' } },
  ];
}

const { lang } = Astro.params;
const allPosts = await getCollection('blog');

// Filter posts by language suffix (e.g., -en.md)
const posts = allPosts.filter((post) => post.id.endsWith(`-${lang}.md`));

// Sort by date descending
posts.sort((a, b) => {
    const dateA = a.data.date || new Date(0);
    const dateB = b.data.date || new Date(0);
    return dateB.getTime() - dateA.getTime();
});

const titles = {
    en: 'Blog',
    de: 'Blog',
    es: 'Blog',
    ru: 'Блог',
};

const readMore = {
    en: 'Read more',
    de: 'Mehr lesen',
    es: 'Leer más',
    ru: 'Читать далее',
};
---

<Layout lang={lang} title={`${titles[lang] || 'Blog'} | Progressivo`}>
  <div class="container page-content animate-on-scroll">
      <div class="blog-grid">
        {posts.length > 0 ? posts.map((post) => (
          <article class="blog-card">
            <div class="card-content">
                <h2>
                    <a href={`/${lang}/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                {post.data.date && (
                    <time datetime={post.data.date.toISOString()} class="post-date">
                    {post.data.date.toLocaleDateString(lang)}
                    </time>
                )}
                <p class="post-excerpt">
                    {post.data.description
                    ? post.data.description
                    : post.body
                        ? post.body.substring(0, 150).replace(/[#*]/g, '') + '...'
                        : ''}
                </p>
                <a href={`/${lang}/blog/${post.slug}`} class="read-more">{readMore[lang] || 'Read more'} &rarr;</a>
            </div>
          </article>
        )) : (
            <p>{lang === 'en' ? 'No posts yet.' :
                lang === 'de' ? 'Noch keine Beiträge.' :
                lang === 'es' ? 'No hay publicaciones todavía.' :
                lang === 'ru' ? 'Пока нет постов.' : 'No posts yet.'}</p>
        )}
      </div>
  </div>
</Layout>

<style>
  .page-content {
      padding-top: 8rem;
      padding-bottom: 4rem;
  }

  .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
  }

  .blog-card {
      background-color: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: var(--shadow-card);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      display: flex;
      flex-direction: column;
  }

  .blog-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .blog-card h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
  }

  .blog-card h2 a {
      color: var(--color-text);
      text-decoration: none;
  }

  .blog-card h2 a:hover {
      color: var(--color-accent);
  }

  .post-date {
      font-size: 0.875rem;
      color: var(--color-text-light);
      margin-bottom: 1rem;
      display: block;
  }

  .post-excerpt {
      color: var(--color-text-light);
      line-height: 1.6;
      margin-bottom: 1.5rem;
      flex-grow: 1;
  }

  .read-more {
      color: var(--color-accent);
      font-weight: 600;
      font-size: 0.95rem;
      margin-top: auto;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
  }

  .read-more:hover {
      gap: 0.5rem;
  }
</style>
