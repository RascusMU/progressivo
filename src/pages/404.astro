---
import Layout from '../layouts/Layout.astro';

const title = "Stránka nenalezena | Progressivo";
const description = "Tahle stránka neexistuje. Možná byla přesunuta, nebo už nedává smysl.";
const whatsappLink = "https://wa.me/50768509698?text=Ahoj%2C%20m%C3%A1m%20z%C3%A1jem%20o%20spolupr%C3%A1ci";
---

<Layout title={title} description={description}>
  <div class="container error-content">
    <h1>Tahle stránka neexistuje.</h1>
    <p class="main-message">Možná byla přesunuta, nebo už nedává smysl.</p>

    <p class="error-redirect-note">
      Za <span id="redirect-count">12</span> sekund vás přesměrujeme na hlavní stránku.
    </p>

    <nav class="error-nav">
      <a href="/">Domů</a>
      <a href="/#services">Služby</a>
      <a href="/kontakt">Kontakt</a>
      <a href={whatsappLink} target="_blank" rel="noopener noreferrer">WhatsApp</a>
    </nav>
  </div>
</Layout>

<script>
  const countSpan = document.getElementById('redirect-count');
  let seconds = 12;

  if (countSpan) {
    const interval = setInterval(() => {
      seconds--;
      countSpan.textContent = seconds.toString();

      if (seconds <= 0) {
        clearInterval(interval);
        window.location.href = '/';
      }
    }, 1000);
  }
</script>

<style>
  .error-content {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding-top: 4rem;
    padding-bottom: 8rem;
  }

  h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    line-height: 1;
    font-weight: 800;
    letter-spacing: -0.04em;
    margin-bottom: 2rem;
    max-width: 15ch;
  }

  p.main-message {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    color: var(--color-text-light);
    margin-bottom: 0; /* Removed large margin to sit closer to the note */
    max-width: 40ch;
    line-height: 1.5;
  }

  .error-redirect-note {
    margin-top: 24px;
    margin-bottom: 4rem; /* Restore spacing to nav */
    font-size: 0.875rem;
    opacity: 0.7;
    color: var(--color-text); /* Ensure visibility */
  }

  .error-nav {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .error-nav a {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.25rem;
    transition: all 0.3s ease;
  }

  .error-nav a:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .error-nav {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>
