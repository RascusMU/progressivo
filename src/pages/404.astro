---
import Layout from '../layouts/Layout.astro';

const title = "Stránka nenalezena | Progressivo";
const description = "Tahle stránka neexistuje.";
---

<Layout title={title} description={description}>
  <div class="container error-container">
    <h1 class="error-title">Tahle stránka neexistuje.</h1>

    <div class="error-wrap">
      <p class="error-redirect-note">
        Pokud jste se překlikli, rádi vás přesměrujeme na hlavní stránku.<br>
        Za <span id="redirect-count">15</span> sekund.
      </p>

      <div class="error-signal">
        <div class="error-progress"></div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const countSpan = document.getElementById('redirect-count');
  let seconds = 15;

  if (countSpan) {
    const interval = setInterval(() => {
      seconds--;
      countSpan.textContent = seconds.toString();

      if (seconds <= 0) {
        clearInterval(interval);
        window.location.href = '/';
      }
    }, 1000);
  }
</script>

<style>
  /* LAYOUT – H1 nahoře, odpočet ve středu viewportu */
  .error-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 4rem 1.5rem 2rem;
  }

  /* H1 – silná, autoritativní, amber */
  .error-title {
    color: #d97706;
    font-weight: 800;
    white-space: nowrap;
    font-size: clamp(2.2rem, 8vw, 3.5rem);
    margin-bottom: 0;
    line-height: 1.1;
    font-family: var(--font-heading);
  }

  /* Blok s odpočtem – vertikálně ve středu */
  .error-wrap {
    margin-top: auto;
    margin-bottom: auto;
    text-align: center;
  }

  /* Text odpočtu – amber, čitelný */
  .error-redirect-note {
    color: #d97706;
    font-size: clamp(1rem, 4vw, 1.15rem);
    font-family: var(--font-body);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  /* Progress bar – základ (šedý podklad) */
  .error-signal {
    width: 100%;
    max-width: 320px;
    height: 2px;
    background: rgba(217, 119, 6, 0.25);
    margin: 0 auto;
    overflow: hidden;
  }

  /* Progress bar – aktivní část (mizí zleva doprava za 15s) */
  .error-progress {
    height: 100%;
    width: 100%;
    background: #d97706;
    animation: progressBar 15s linear forwards;
  }

  @keyframes progressBar {
    from { width: 100%; }
    to   { width: 0%; }
  }

  /* DARK MODE – světlejší amber */
  :global([data-theme="dark"]) .error-title,
  :global([data-theme="dark"]) .error-redirect-note {
    color: #fbbf24;
  }

  :global([data-theme="dark"]) .error-progress {
    background: #fbbf24;
  }

  :global([data-theme="dark"]) .error-signal {
    background: rgba(251, 191, 36, 0.25);
  }
</style>
