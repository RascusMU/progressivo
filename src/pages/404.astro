---
import Layout from '../layouts/Layout.astro';

const title = "Stránka nenalezena | Progressivo";
const description = "Tahle stránka neexistuje.";
---

<Layout title={title} description={description}>
  <div class="error-container">
    <h1 class="error-title">Tahle stránka neexistuje.</h1>

    <div class="error-wrap">
      <p class="error-redirect-note">
        Pokud jste se překlikli, rádi vás přesměrujeme na hlavní stránku.<br>
        Za <span id="redirect-count">15</span> sekund.
      </p>

      <div class="error-signal">
        <div class="error-progress"></div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const countSpan = document.getElementById('redirect-count');
  let seconds = 15;

  if (countSpan) {
    const interval = setInterval(() => {
      seconds--;
      countSpan.textContent = seconds.toString();

      if (seconds <= 0) {
        clearInterval(interval);
        window.location.href = '/';
      }
    }, 1000);
  }
</script>

<style>
  /* CELÁ STRÁNKA – vše na střed, posunuté dolů od loga */
  .error-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 8rem 1.5rem 4rem; /* VÍCE NAHOŘE = dál od loga */
  }

  /* H1 – silná, amber, NA STŘEDU */
  .error-title {
    color: #d97706;
    font-weight: 800;
    font-size: clamp(2.2rem, 8vw, 3.5rem);
    margin-bottom: 2rem;
    line-height: 1.1;
    font-family: var(--font-heading);
  }

  /* Blok s odpočtem */
  .error-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Text odpočtu – amber, čitelný */
  .error-redirect-note {
    color: #d97706;
    font-size: clamp(1rem, 4vw, 1.15rem);
    font-family: var(--font-body);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  /* Progress bar – základ (světlý podklad) */
  .error-signal {
    width: 100%;
    max-width: 280px;
    height: 2px;
    background: rgba(217, 119, 6, 0.25);
    overflow: hidden;
    border-radius: 1px;
  }

  /* Progress bar – aktivní část */
  /* SMĚR: začíná PLNÁ, končí PRÁZDNÁ (zleva doprava mizí) */
  .error-progress {
    height: 100%;
    width: 100%;
    background: #d97706;
    transform-origin: left center;
    animation: progressShrink 15s linear forwards;
  }

  @keyframes progressShrink {
    from { 
      transform: scaleX(1); 
    }
    to { 
      transform: scaleX(0); 
    }
  }

  /* DARK MODE – světlejší amber */
  :global([data-theme="dark"]) .error-title,
  :global([data-theme="dark"]) .error-redirect-note {
    color: #fbbf24;
  }

  :global([data-theme="dark"]) .error-progress {
    background: #fbbf24;
  }

  :global([data-theme="dark"]) .error-signal {
    background: rgba(251, 191, 36, 0.25);
  }
</style>
