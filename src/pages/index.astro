---
import Layout from '../layouts/Layout.astro';
import FounderAudioPlayer from '../components/FounderAudioPlayer.astro';
import EditorialTimeSignal from '../components/EditorialTimeSignal.astro';
import HomepageCTA from '../components/HomepageCTA.astro';
import { getCollection } from 'astro:content';
import { ui, defaultLang } from '../i18n/ui';
import { Image } from 'astro:assets';
import founderImage from '../assets/images/tatka-pise.webp';
import fallbackServiceImage from '../assets/images/mapa-svetabusines.webp';

// Root index.astro nemá getStaticPaths, protože je to statický entry point
const lang = defaultLang; // Vždy 'cs' (nebo co je default)

const allServices = await getCollection('services');
// Filtrujeme služby pro defaultní jazyk
let services = allServices.filter(service => service.data.lang === lang);
const t = ui[lang] || ui[defaultLang];

const desiredOrder = [
  'analyza-dna',
  'efektivni-integrace',
  'it-podpora',
  'expatriace-viza',
  'nemovitosti',
  'preklady',
  'prodej-techniky',
  'online-kurzy'
];

services.sort((a, b) => {
  const slugA = a.id.split('/').pop().replace(/\.md$/, '');
  const slugB = b.id.split('/').pop().replace(/\.md$/, '');
  return desiredOrder.indexOf(slugA) - desiredOrder.indexOf(slugB);
});
---

<Layout lang={lang} title={`${t.pages.home_title} | Progressivo`}>
  <script>
    document.addEventListener('astro:page-load', () => {
        // Founder Image Unroll Animation
        const founderImageWrapper = document.querySelector('.founder-image-wrapper');
        if (founderImageWrapper) {
            if ('IntersectionObserver' in window) {
                founderImageWrapper.classList.add('waiting');

                const founderObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.remove('waiting');
                            entry.target.classList.add('visible');
                            founderObserver.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.2 });
                founderObserver.observe(founderImageWrapper);

                setTimeout(() => {
                    if (founderImageWrapper.classList.contains('waiting')) {
                        founderImageWrapper.classList.remove('waiting');
                        founderImageWrapper.classList.add('visible');
                    }
                }, 3000);
            }
        }

        // 3D Tilt Effect
        const cards = document.querySelectorAll('.service-card');

        if (window.matchMedia("(min-width: 1024px)").matches) {
            cards.forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    if (!document.documentElement.classList.contains('dark')) return;

                    // @ts-ignore
                    const rect = card.getBoundingClientRect();
                    // @ts-ignore
                    const x = e.clientX - rect.left;
                    // @ts-ignore
                    const y = e.clientY - rect.top;

                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;

                    const rotateX = ((y - centerY) / centerY) * -5;
                    const rotateY = ((x - centerX) / centerX) * 5;

                    const spotX = (e.clientX - rect.left) / rect.width * 100;
                    const spotY = (e.clientY - rect.top) / rect.height * 100;
                    // @ts-ignore
                    card.style.setProperty('--spotlight', `radial-gradient(circle at ${spotX}% ${spotY}%, rgba(255,255,255,0.1) 0%, transparent 50%)`);

                    // @ts-ignore
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
                });

                card.addEventListener('mouseleave', () => {
                    if (!document.documentElement.classList.contains('dark')) {
                        // @ts-ignore
                        card.style.transform = '';
                        return;
                    }
                    // @ts-ignore
                    card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
                });
            });
        }
    });
  </script>

  <section class="editorial-hero">
    <div class="container hero-content">
      <h1 class="hero-title" set:html={t.pages.home.hero_title}></h1>
      <p class="hero-subtitle">{t.pages.home.hero_subtitle}</p>
      <a href="#services" class="editorial-cta">{t.buttons.collaborate} <span class="arrow">→</span></a>
    </div>
  </section>

  <EditorialTimeSignal />

  <section id="founder" class="founder-section animate-on-scroll">
    <div class="container founder-content">
      <div class="founder-text-column">
        <h2 class="editorial-title">{t.pages.home.founder_title}</h2>
        <div class="founder-prose">
          <p class="founder-name">{t.pages.home.founder_name}</p>
          <p>{t.pages.home.founder_p1}</p>
          <p>{t.pages.home.founder_p2}</p>
          <p>{t.pages.home.founder_p3}</p>
        </div>

        <div class="founder-actions">
          <a href="https://cingel.cz" target="_blank" class="founder-link">{t.buttons.founder_story}</a>
          <FounderAudioPlayer
            src="/audio/founder-intro.mp3"
            buttonText={t.buttons.play_audio}
            disclaimerText={t.pages.home.audio_note}
          />
        </div>
      </div>

      <div class="founder-image-column">
        <div class="founder-image-wrapper">
          <Image src={founderImage} alt="Jaroslav Cingel" class="founder-image" width={600} />
        </div>
      </div>
    </div>
  </section>

  <section id="services" class="section-services animate-on-scroll">
    <div class="container">
      <h2 class="section-title">{t.pages.home.services_title}</h2>
      <div class="services-grid">
        {services.map((service, index) => {
          const slug = service.id.split('/').pop().replace(/\.md$/, '');

          let spanClass = 'span-1';
          if (slug === 'analyza-dna' || slug === 'expatriace-viza') {
            spanClass = 'span-2';
          } else if (slug === 'online-kurzy') {
            spanClass = 'span-3';
          }

          const cardClass = `service-card ${spanClass}`;
          const hasCustomImage = !!service.data.image;

          return (
          <a href={`/${lang}/sluzby/${slug}`} class={cardClass} data-service={slug}>
            <div class="card-media">
                {hasCustomImage ? (
                    <img
                        src={service.data.image}
                        alt={service.data.title}
                        class="service-image"
                        width="1200"
                        height="900"
                        loading={index < 2 ? "eager" : "lazy"}
                        style="object-fit: cover; width: 100%; height: 100%;"
                    />
                ) : (
                    <Image
                        src={fallbackServiceImage}
                        alt={service.data.title}
                        class="service-image"
                        width={1200}
                        sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 400px"
                        loading={index < 2 ? "eager" : "lazy"}
                    />
                )}
            </div>
            <h3>{service.data.title}</h3>
            <p>{service.data.description.length > 150 ? service.data.description.slice(0, 150) + '...' : service.data.description}</p>
          </a>
        )})}
      </div>
    </div>
  </section>

  <HomepageCTA lang={lang} />
</Layout>

<style>
  /*
   * IDENTICKÉ STYLY JAKO V [lang]/index.astro
   * Master Copy for Root Homepage
   */
  .editorial-hero {
    padding-top: max(15vh, 120px);
    padding-bottom: 2rem;
    padding-left: 0;
    padding-right: 0;
    text-align: left;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
    max-width: 1400px;
    padding: 0 1.5rem;
    animation: fadeUp 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content { animation: none; opacity: 1; transform: none; }
  }

  .hero-title {
    font-family: 'Plus Jakarta Sans', system-ui, -apple-system, 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;
    font-size: clamp(3.5rem, 11vw, 9rem);
    font-weight: 800;
    line-height: 0.95;
    letter-spacing: -0.04em;
    color: #222222;
    margin-bottom: 3rem;
    max-width: 100%;
  }

  :global(html.dark) .hero-title { color: #f5f5f4; }

  .hero-subtitle {
    font-family: 'Manrope', system-ui, -apple-system, 'Segoe UI', sans-serif;
    font-size: clamp(1.125rem, 2vw, 1.35rem);
    line-height: 1.6;
    color: #222222;
    opacity: 0.8;
    max-width: 600px;
    margin-bottom: 3rem;
    margin-top: 0;
  }

  :global(html.dark) .hero-subtitle { color: rgba(245, 245, 244, 0.8); }

  .editorial-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Manrope', system-ui, -apple-system, 'Segoe UI', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #222222;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  :global(html.dark) .editorial-cta { color: #f5f5f4; }

  .editorial-cta .arrow {
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    display: inline-block;
  }

  .editorial-cta:hover {
    color: #d97706;
    border-color: rgba(217, 119, 6, 0.3);
  }

  .editorial-cta:hover .arrow { transform: translateX(6px); }

  .founder-section {
    padding: 8rem 0;
    background-color: var(--color-bg-alt); /* Editorial Cut-out - Distinct Background */
    overflow: hidden;
  }

  .founder-content {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    align-items: center;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    gap: 4rem;
  }

  .founder-text-column {
    z-index: 10;
    padding-right: 0;
    max-width: 600px;
  }

  .editorial-title {
    font-family: 'Plus Jakarta Sans', system-ui, -apple-system, 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2.5rem;
    color: #222222;
  }

  .founder-prose {
    font-family: 'Manrope', system-ui, -apple-system, 'Segoe UI', sans-serif;
    font-size: 1.15rem;
    line-height: 1.8;
    color: #222222;
    margin-bottom: 3rem;
  }

  .founder-name {
    font-weight: 800;
    font-size: 1.35rem;
    color: #222222;
    margin-bottom: 1rem;
    display: block;
  }

  .founder-prose p { margin-bottom: 1.5rem; }
  .founder-prose p:last-child { margin-bottom: 0; }

  .founder-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .founder-link {
    font-size: 1.1rem;
    font-weight: 700;
    color: #222222;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .founder-link:hover { border-color: #d97706; }

  /* DARK MODE FOUNDER - ALL DARK AMBER (#d97706) */
  :global(html.dark) .founder-section h2,
  :global(html.dark) .founder-section .founder-name,
  :global(html.dark) .founder-section .founder-prose,
  :global(html.dark) .founder-section .founder-link,
  :global(html.dark) .founder-section p,
  :global(html.dark) .founder-section :global(.founder-audio-player .play-btn),
  :global(html.dark) .founder-section :global(.founder-audio-player .audio-disclaimer) {
    color: #d97706 !important; /* Amber-600 */
    border-color: #d97706 !important;
    opacity: 1 !important;
  }

  .founder-image-column { position: relative; z-index: 1; }

  .founder-image-wrapper {
    position: relative;
    width: 100%;
    margin-left: -4rem;
    background-color: #fcfbf9;
    padding: 0;
    box-shadow: 0 20px 30px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform-origin: top right;
    transition:
      mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      -webkit-mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      opacity 1.2s ease-out;
  }

  .founder-image-wrapper.waiting {
    mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    mask-size: 300% 300%;
    mask-position: 100% 0%;
    -webkit-mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    -webkit-mask-size: 300% 300%;
    -webkit-mask-position: 100% 0%;
    transform: scale(0.92) rotate(-2deg);
    opacity: 0.8;
  }

  .founder-image-wrapper.visible {
    mask-position: 0% 100%;
    -webkit-mask-position: 0% 100%;
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }

  .founder-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 2px;
    object-fit: cover;
  }

  .section-services {
    padding: 5rem 0;
    background-color: var(--color-bg-alt);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background-color: var(--color-accent);
    border-radius: 2px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: var(--color-bg-card);
    background-image: var(--spotlight);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;
    border: var(--card-border);
    transform-style: preserve-3d;
    perspective: 1000px;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .span-2 { grid-column: span 2; }
  .span-3 { grid-column: span 3; }

  :global(:root:not(.dark)) .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(120, 113, 108, 0.1), 0 10px 10px -5px rgba(120, 113, 108, 0.04);
    border-color: var(--color-accent); /* Full Amber Border Highlight on Hover */
  }

  :global(:root:not(.dark)) .service-image {
      filter: sepia(0.05) contrast(0.95) brightness(1.02);
      transition: filter 0.3s ease, transform 0.5s ease;
  }

  :global(:root:not(.dark)) .service-card:hover .service-image { filter: none; }

  :global(html.dark) .service-card {
    background: rgba(2, 6, 23, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  :global(html.dark) .service-card:hover {
    box-shadow: 0 30px 40px -10px rgba(0, 0, 0, 0.2), 0 20px 20px -10px rgba(0, 0, 0, 0.1);
    z-index: 10;
    border-color: var(--color-accent);
  }

  .card-media {
    width: 100%;
    height: 200px;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-card:hover .service-image { transform: scale(1.05); }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .service-card p {
    color: var(--color-text-light);
    flex-grow: 1;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  @media (max-width: 1024px) {
     .founder-content { grid-template-columns: 1fr; gap: 3rem; }
     .founder-text-column { padding-right: 0; order: 1; text-align: left; }
     .founder-image-column { order: 2; }
     .founder-image-wrapper { margin-left: 0; transform: none; max-width: 500px; }
  }

  @media (max-width: 768px) {
    .services-grid { grid-template-columns: 1fr; }
    .span-2, .span-3 { grid-column: span 1; }

    .section-services.animate-on-scroll .service-card {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 1.5s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 1.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    :global(body.animations-enabled) .section-services.animate-on-scroll.in-view .service-card {
        opacity: 1;
        transform: translateY(0);
    }

    .service-card:active {
        transform: scale(0.96) !important;
        transition: transform 300ms cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
        border-color: var(--color-accent);
    }

    @media (prefers-reduced-motion: reduce) {
        .section-services.animate-on-scroll .service-card {
            opacity: 1;
            transform: none;
            transition: none;
        }
    }

    .founder-content { gap: 2rem; }
    .editorial-title { font-size: 2.25rem; margin-bottom: 1.5rem; }
    .founder-text-column { padding: 0 1rem; }
    .founder-image-wrapper { width: 100%; max-width: 100%; margin-left: 0; }
    .section-title { font-size: 2rem; }
  }
</style>
