---
import Layout from '../layouts/Layout.astro';
import FounderAudioPlayer from '../components/FounderAudioPlayer.astro';
import EditorialTimeSignal from '../components/EditorialTimeSignal.astro';
import HomepageCTA from '../components/HomepageCTA.astro';
import { getCollection } from 'astro:content';
import { ui } from '../i18n/ui';

const lang = 'cs';
const t = ui[lang];

const allServices = await getCollection('services');
let services = allServices.filter(service => !['en/', 'de/', 'ru/', 'es/'].some(prefix => service.id.startsWith(prefix)));

const desiredOrder = [
  'analyza-dna',
  'efektivni-integrace',
  'it-podpora',
  'expatriace-viza',
  'nemovitosti',
  'preklady',
  'prodej-techniky',
  'online-kurzy'
];

services.sort((a, b) => {
  const slugA = a.id.replace(/\.md$/, '');
  const slugB = b.id.replace(/\.md$/, '');
  return desiredOrder.indexOf(slugA) - desiredOrder.indexOf(slugB);
});
---

<Layout title={`${t.pages.home_title} | Progressivo`}>
  <script>
    document.addEventListener('astro:page-load', () => {
        // Founder Image Unroll Animation
        const founderImageWrapper = document.querySelector('.founder-image-wrapper');
        if (founderImageWrapper) {
            // Progressive Enhancement: Only hide if IntersectionObserver is supported
            if ('IntersectionObserver' in window) {
                founderImageWrapper.classList.add('waiting');

                const founderObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.remove('waiting');
                            entry.target.classList.add('visible');
                            founderObserver.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.2 });
                founderObserver.observe(founderImageWrapper);

                // FAILSAFE: Ensure image becomes visible even if observer fails or takes too long
                setTimeout(() => {
                    if (founderImageWrapper.classList.contains('waiting')) {
                        founderImageWrapper.classList.remove('waiting');
                        founderImageWrapper.classList.add('visible');
                    }
                }, 3000); // 3 seconds safety timeout
            }
        }

        // 3D Tilt Effect
        const cards = document.querySelectorAll('.service-card');

        if (window.matchMedia("(min-width: 1024px)").matches) {
            cards.forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    // @ts-ignore
                    const rect = card.getBoundingClientRect();
                    // @ts-ignore
                    const x = e.clientX - rect.left;
                    // @ts-ignore
                    const y = e.clientY - rect.top;

                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;

                    const rotateX = ((y - centerY) / centerY) * -5; // Max 5 deg rotation
                    const rotateY = ((x - centerX) / centerX) * 5;

                    // @ts-ignore
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
                });

                card.addEventListener('mouseleave', () => {
                    // @ts-ignore
                    card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
                });
            });
        }
    });
  </script>

  <!-- Editorial Hero Section -->
  <section class="editorial-hero">
    <div class="container hero-content">
      <h1 class="hero-title" set:html={t.pages.home.hero_title}></h1>
      <p class="hero-subtitle">{t.pages.home.hero_subtitle}</p>
      <a href="#services" class="editorial-cta">{t.buttons.collaborate} <span class="arrow">→</span></a>
    </div>
  </section>

  <!-- Editorial Time Signal -->
  <EditorialTimeSignal />

  <!-- Founder Section -->
  <section id="zakladatel" class="founder-section animate-on-scroll">
    <div class="container founder-content">
      <div class="founder-text-column">
        <h2 class="editorial-title">{t.pages.home.founder_title}</h2>
        <div class="founder-prose">
          <p class="founder-name">{t.pages.home.founder_name}</p>
          <p>{t.pages.home.founder_p1}</p>
          <p>{t.pages.home.founder_p2}</p>
          <p>{t.pages.home.founder_p3}</p>
        </div>

        <div class="founder-actions">
          <a href="https://cingel.cz" target="_blank" class="founder-link">{t.buttons.founder_story}</a>
          <FounderAudioPlayer
            src="/audio/founder-intro.mp3"
            buttonText={t.buttons.play_audio}
            disclaimerText={t.pages.home.audio_note}
          />
        </div>
      </div>

      <div class="founder-image-column">
        <div class="founder-image-wrapper">
          <img
            src="/images/tatka-pise.webp"
            alt="Jaroslav Cingel při práci v kanceláři"
            class="founder-image"
            width="682"
            height="512"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="section-services animate-on-scroll">
    <div class="container">
      <h2 class="section-title">{t.pages.home.services_title}</h2>
      <div class="services-grid">
        {services.map((service, index) => {
          const slug = service.id.replace(/\.md$/, '');

          let spanClass = 'span-1';
          if (slug === 'analyza-dna' || slug === 'expatriace-viza') {
            spanClass = 'span-2';
          } else if (slug === 'online-kurzy') {
            spanClass = 'span-3';
          }

          const cardClass = `service-card ${spanClass}`;

          return (
          <a href={`/cs/sluzby/${slug}`} class={cardClass}>
            <div class="card-media">
                <img
                  src={service.data.image || "/images/mapa-svetabusines.webp"}
                  srcset={`
                    ${(service.data.image || "/images/mapa-svetabusines.webp").replace('.webp', '-400.webp')} 400w,
                    ${(service.data.image || "/images/mapa-svetabusines.webp").replace('.webp', '-800.webp')} 800w,
                    ${(service.data.image || "/images/mapa-svetabusines.webp").replace('.webp', '-1200.webp')} 1200w
                  `}
                  sizes="(max-width: 600px) 400px, (max-width: 900px) 800px, 1200px"
                  alt={service.data.title}
                  class="service-image"
                  width="1200"
                  height="900"
                  loading={index < 2 ? "eager" : "lazy"}
                />
            </div>
            <h3>{service.data.title}</h3>
            <p>{service.data.description.length > 150 ? service.data.description.slice(0, 150) + '...' : service.data.description}</p>
          </a>
        )})}
      </div>
    </div>
  </section>

  <!-- Editorial CTA -->
  <HomepageCTA lang={lang} />
</Layout>

<style>
  /*
   * EDITORIAL HERO SECTION
   * Concept: "Tiché sebevědomí"
   */
  .editorial-hero {
    /* Massive top padding, textured background (inherited from body/layout if present, else clean) */
    padding-top: max(15vh, 120px);
    padding-bottom: 2rem; /* Reduced padding bottom since TimeSignal is below */
    padding-left: 0;
    padding-right: 0;
    text-align: left; /* Strict left alignment */
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Left align items */
    gap: 0; /* Spacing handled by margins */
    max-width: 1400px; /* Allow it to breathe */
    padding: 0 1.5rem;
    animation: fadeUp 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  /* Entrance Animation */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* MEGA-TYPE H1 */
  .hero-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(3.5rem, 11vw, 9rem);
    font-weight: 800; /* ExtraBold */
    line-height: 0.95;
    letter-spacing: -0.04em;
    color: #1a1a1a; /* Hard Ink */
    margin-bottom: 3rem;
    max-width: 100%;
    text-wrap: balance;
  }

  /* Dark Mode H1 */
  :global(html.dark) .hero-title {
    color: #f5f5f4; /* Warm White */
  }

  /* Subline */
  .hero-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(1.125rem, 2vw, 1.35rem);
    line-height: 1.6;
    color: rgba(26, 26, 26, 0.8);
    max-width: 600px;
    margin-bottom: 3rem;
    margin-top: 0;
  }

  :global(html.dark) .hero-subtitle {
    color: rgba(245, 245, 244, 0.8);
  }

  /* Editorial CTA (Link style) */
  .editorial-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Manrope', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  :global(html.dark) .editorial-cta {
    color: #f5f5f4;
  }

  .editorial-cta .arrow {
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    display: inline-block;
  }

  .editorial-cta:hover {
    color: #d97706; /* Amber-600 */
    border-color: rgba(217, 119, 6, 0.3);
  }

  .editorial-cta:hover .arrow {
    transform: translateX(6px);
  }

  /* Founder Section - Magazine Layout */
  .founder-section {
    padding: 8rem 0;
    background-color: var(--color-bg);
    overflow: hidden; /* For safety with negative margins */
    /* FORCE AMBER INK TEXT */
    color: var(--color-accent);
  }

  /* Force Amber Ink on all text elements inside Founder Section */
  .founder-section h2,
  .founder-section p,
  .founder-section a,
  .founder-section button,
  .founder-section span {
      color: var(--color-accent) !important;
      opacity: 0.9; /* Increased contrast from implicit lower opacity */
  }

  /* Helper to target the audio player specific parts if needed */
  .founder-section :global(.founder-audio-player .play-btn),
  .founder-section :global(.founder-audio-player .audio-disclaimer) {
      color: var(--color-accent) !important;
      border-color: var(--color-accent) !important;
  }

  .founder-content {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr; /* Text wider than image */
    align-items: center;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    gap: 4rem;
  }

  .founder-text-column {
    z-index: 10;
    padding-right: 0;
    max-width: 600px; /* Prevent text from touching the image */
  }

  .editorial-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2.5rem;
    color: var(--color-accent);
  }

  .founder-prose {
    font-family: 'Manrope', sans-serif;
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--color-accent);
    margin-bottom: 3rem;
  }

  .founder-name {
    font-weight: 800;
    font-size: 1.35rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
    display: block;
  }

  .founder-prose p {
    margin-bottom: 1.5rem;
  }

  .founder-prose p:last-child {
    margin-bottom: 0;
  }

  .founder-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .founder-link {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .founder-link:hover {
    border-color: var(--color-accent);
  }

  .founder-image-column {
    position: relative;
    z-index: 1;
  }

  .founder-image-wrapper {
    position: relative;
    width: 100%;
    margin-left: -4rem; /* The Magazine "Overlap" */

    /* Premium Paper / Scroll Look */
    background-color: #fcfbf9; /* Warm Paper */
    padding: 0; /* Removed border/frame effect */
    box-shadow: 0 20px 30px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

    /* Animation Setup */
    transform-origin: top right;
    transition:
      mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      -webkit-mask-position 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1),
      opacity 1.2s ease-out;
  }

  /* Stav ČEKÁNÍ (přidá JS okamžitě po načtení) */
  .founder-image-wrapper.waiting {
    /* Maska: Gradient simuluje měkký ohyb papíru */
    mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    mask-size: 300% 300%;
    mask-position: 100% 0%; /* Start: Skryto (nebo jen roh) */

    /* Safari / Webkit support - KRITICKÉ PRO iOS */
    -webkit-mask-image: linear-gradient(225deg, black 40%, transparent 60%);
    -webkit-mask-size: 300% 300%;
    -webkit-mask-position: 100% 0%;

    /* Fyzika: Zmenšené a natočené */
    transform: scale(0.92) rotate(-2deg);
    opacity: 0.8;
  }

  /* Stav ODHALENÍ (přidá JS při scrollu) */
  .founder-image-wrapper.visible {
    /* Reset masky = plně viditelné */
    mask-position: 0% 100%;
    -webkit-mask-position: 0% 100%;

    /* Reset fyziky = narovnáno */
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }

  .founder-image {
    width: 100%;
    height: auto;
    display: block;
    /* Removed border-radius to look like cut paper or keep it straight */
    border-radius: 8px;
    object-fit: cover;
  }

  /* Services Section */
  .section-services {
    padding: 5rem 0;
    background-color: var(--color-bg-alt);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background-color: var(--color-accent);
    border-radius: 2px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    transition: transform 0.1s ease-out, box-shadow 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;
    border: var(--card-border);
    transform-style: preserve-3d;
    perspective: 1000px;
    /* Removed max-width: 350px to allow filling the grid cell, especially for spans */
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .span-2 {
      grid-column: span 2;
  }

  .span-3 {
      grid-column: span 3;
  }

  .service-card:hover {
    box-shadow: 0 30px 40px -10px rgba(0, 0, 0, 0.2), 0 20px 20px -10px rgba(0, 0, 0, 0.1);
    z-index: 10;
    border-color: var(--color-accent);
  }

  .card-media {
    width: 100%;
    height: 200px;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-card:hover .service-image {
    transform: scale(1.05);
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .service-card p {
    color: var(--color-text-light);
    flex-grow: 1;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  /* Responsive Adjustments */
  @media (max-width: 1024px) {
     .founder-content {
        grid-template-columns: 1fr;
        gap: 3rem;
     }

     .founder-text-column {
        padding-right: 0;
        order: 2; /* Text below image on tablet if desired, or above. Let's keep Text Above as per logic usually, or text below? */
        /* Standard mobile/tablet flow: Image then Text, or Text then Image.
           User said "zachovat čitelnost na mobilu".
        */
        order: 1;
        text-align: left;
     }

     .founder-image-column {
        order: 2;
     }

     .founder-image-wrapper {
        margin-left: 0;
        transform: none;
        max-width: 500px;
     }
  }

  @media (max-width: 768px) {
    .services-grid {
        grid-template-columns: 1fr;
    }

    .span-2, .span-3 {
        grid-column: span 1;
    }

    /* Service Cards Mobile Tuning - Gentle Lift & Touch Feedback */
    .section-services.animate-on-scroll .service-card {
        opacity: 0;
        transform: translateY(20px);
        /* Ensure no scale transition conflict */
        transition: opacity 800ms cubic-bezier(0.2, 0.8, 0.2, 1),
                    transform 800ms cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* Entry Animation: Requires BOTH Observer (.in-view) AND Time Gate (.animations-enabled) */
    :global(body.animations-enabled) .section-services.animate-on-scroll.in-view .service-card {
        opacity: 1;
        transform: translateY(0);
    }

    /* Clear Tap Feedback */
    .service-card:active {
        transform: scale(0.96) !important;
        transition: transform 150ms ease-out !important;
        border-color: var(--color-accent); /* Optional hint */
    }

    /* Reduced Motion Override */
    @media (prefers-reduced-motion: reduce) {
        .section-services.animate-on-scroll .service-card {
            opacity: 1;
            transform: none;
            transition: none;
        }
    }

    /* Founder Mobile adjustments */
    .founder-content {
      gap: 2rem;
    }

    .editorial-title {
        font-size: 2.25rem;
        margin-bottom: 1.5rem;
    }

    .founder-text-column {
        padding: 0 1rem;
    }

    .founder-image-wrapper {
        width: 100%;
        max-width: 100%;
        margin-left: 0;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>
